depends: [
  "dune" { >= "2.5" }
  "ocaml" { >= "4.8.0" & < "4.12" }
  "lwt" { >= "5.1.0" }
  "alcotest-lwt" { with-test & >= "1.1.0" }
  "crowbar" { with-test }
]
build: [
  ["rm" "-r" "vendors"]
  ["dune" "build" "-p" name "-j" jobs]
  ["mv" "src/lib_lwt_result_stdlib/%{name}%.install" "./"]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
