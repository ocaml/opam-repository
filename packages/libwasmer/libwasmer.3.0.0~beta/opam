build: [
	["mkdir .cargo"]
	["mv cargo-config .cargo/config.toml"]
	["tar xf vendor.tar.gz"]
	["make build-capi"]
	["make package-capi"]
]
run-test: [
	["make test-capi"]
]
install: [
	["make install-capi"]
]
