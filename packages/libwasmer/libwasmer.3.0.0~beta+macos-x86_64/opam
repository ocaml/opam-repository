opam-version: "2.0"
authors: ["wasmer"]
maintainer: "engineering@wasmer.io"
license: "MIT"
homepage: "https://wasmer.io/"

doc: "https://docs.wasmer.io/"
bug-reports: "https://github.com/wasmerio/wasmer-ocaml/issues"
dev-repo: "git+https://github.com/wasmerio/wasmer-ocaml.git"
tags: ["org:wasmer"]

synopsis: "The official Wasmer library"
description: """
This package is used by the wasmer package to trigger the installation
of the Wasmer library."""

extra-source "libwasmer.tar.gz" {
	src: "https://github.com/wasmerio/wasmer/releases/download/3.0.0-beta/wasmer-darwin-amd64.tar.gz"
}
build: [
	["sh" "-c" "gunzip libwasmer.tar.gz && tar xf libwasmer.tar"]
	["sed" "-i" ".orig" "s`#{libpath}#`%{_:lib}%`" "META"]
	["ln" "-s" "libwasmer.dylib" "lib/libwasmer.so"]
]
available: (os = "macos") & (arch = "x86_64")
