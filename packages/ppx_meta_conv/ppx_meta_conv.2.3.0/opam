dev-repo: "hg://https://bitbucket.org/camlspotter/ppx_meta_conv"
build: [
  [ "ocaml" "setup.ml" "-configure" "--prefix" prefix ]
  [ "ocaml" "setup.ml" "-build" ]
]
install: [
  [ "ocaml" "setup.ml" "-install" ]
]
remove: [
  [ "ocaml" "setup.ml" "-configure" "--prefix" prefix ]
  [ "ocaml" "setup.ml" "-uninstall" ]
]
available: [
  ocaml-version >= "4.02.2" & ocaml-version < "4.03.0"
]
depends: [
  "ocamlfind" { build }
  "omake" { build & < "0.10.1" }
  "ppx_deriving" { >= "3.0" & < "4.0" }
  "spotlib" { >= "2.5.3" }
  "ppxx"
]
depopts: [
  "tiny_json"
  "sexplib"
]
conflicts: [
  "tiny_json" { < "1.1.0" }
  "sexplib" { < "112.24.01" }
]
