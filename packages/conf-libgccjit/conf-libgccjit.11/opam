opam-version: "2.0"
maintainer: "Lukasz Stafiniak <lukstafi@gmail.com>"
authors: [
    "David Malcolm <dmalcolm@redhat.com>"
]
homepage: "https://gcc.gnu.org/wiki/JIT"
license: "GPL-2.0-or-later"
# Unfortunately, we cannot rely on the OS for selecting the right version
# of libgccjit-dev, the generic dev package does not seem to exist on some
# systems. There is libgccjit0, but not libgccjit0-dev (even though there is
# libgccjit-devel on Fedora, libgccjit on NixOS, libgccjit-dev on Alpine).
build: [
  ["sh" "-exc" "gcc --version | grep 11"]
  ["sh" "-exc" "echo \"#include  \\\"libgccjit.h\\\"\" > test.c"]
  ["sh" "-exc" "gcc -c $CFLAGS -I/usr/local/include test.c"] {os != "macos"}
  [
    "sh"
    "-exc"
    "cc -c $CFLAGS -I/opt/homebrew/include -I/opt/local/include -I/usr/local/include test.c"
  ] {os = "macos"}
]
depends: [ "conf-gcc" ]
# Check that the default version of gcc is not too high.
# By depending on the specific version of gcc below, we might upgrade
# the default gcc binary, but we will not downgrade it.
depexts: [
  ["libgccjit-11-dev"] {os-family = "debian"}
  ["libgccjit-11-dev"] {os-family = "ubuntu"}
  ["libgccjit11-devel"] {os-family = "suse"}
  ["libgccjit-11-dev"] {os-family = "opensuse"}
  ["libgccjit-11"] {os-distribution = "nixos"}
  # For the following distributions, we cannot install version 11 specifically,
  # because `rpm -q --whatprovides` can only locate the unqualified package name.
  # While misleading, this is preferable for usability.
  ["libgccjit-devel"] {os-distribution = "centos"}
  ["libgccjit-devel"] {os-distribution = "fedora"}
  ["libgccjit-devel"] {os-distribution = "ol" | os-distribution = "oraclelinux"}
  ["libgccjit"] {os-family = "arch"}
]
post-messages: [
  "libgccjit version must correspond to the gcc version; consider upgrading gcc or pinning a different version of conf-libgccjit"
  {failure}
]
synopsis: "Virtual package relying on a libgccjit system installation"
description:
  "This package can only install if libgccjit-11 is installed on the system."
bug-reports: "https://github.com/ocaml/opam-repository/issues"
flags: conf
