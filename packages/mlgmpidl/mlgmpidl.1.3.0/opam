build: [
  ["sh" "./configure" "--absolute-dylibs" {os = "macos"}
        "CPPFLAGS+=-I%{conf-gmp-paths:incdir}%"
        "CPPFLAGS+=-I%{conf-mpfr-paths:incdir}%"
        "LDFLAGS+=-L%{conf-gmp-paths:libdir}%"
        "LDFLAGS+=-L%{conf-mpfr-paths:libdir}%" ]
  [make]
]
install: [
  [make "install"]
]
depends: [
  "ocaml" {>= "3.12.1"}
  "ocamlfind" {build & >= "1.5.6"}
  "camlidl" {!= "1.10"}
  "conf-gmp-paths"
  "conf-mpfr-paths"
  "conf-perl" {build}
  "bigarray-compat" # { ocaml >= "4.07" }
]
conflicts: [
  "mlgmp"
  "apron" {= "20140725"}
  "apron" {= "20150518"}
]
