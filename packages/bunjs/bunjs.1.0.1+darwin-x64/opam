build: [
  [ "unzip" "bun-darwin-x64.zip" ]
  [ "mv" "bun-darwin-x64/bun" "." ]
  [ "./bun" "--version" ] {with-test}
  [ "ln" "-s" "./bun" "bunx" ]
  [ "./bunx" "bun" "--version" ] {with-test}
  [ "bash" "-c" "echo 'bin: [ \"bun\" \"bunx\" ]' > %{name}%.install" ]
]
