  ["ocamlfind" "remove" "lacaml"]
]
depends: [
  "ocaml" {>= "4.03"}
  "base-bigarray"
  "base-bytes"
  "ocamlbuild" {build}
  "ocamlfind" {build & >= "1.5"}
  "conf-blas"
  "conf-lapack"
]
synopsis: "OCaml-bindings to BLAS and LAPACK."
description: """
This library interfaces the BLAS-library (Basic Linear Algebra
Subroutines) and LAPACK-library (Linear Algebra routines), which are
written in FORTRAN."""
