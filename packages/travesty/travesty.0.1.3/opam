depends: [
  "ocaml" {>= "4.06"}
  "dune"
  "ppx_deriving"
  "ppx_expect" {< "v0.12"}
  "ppx_jane" {< "v0.12"}
  "ppx_sexp_message" {< "v0.12"}
  "core_kernel" {>= "v0.11" & < "v0.12"}
]
build: ["dune" "build" "-p" name "-j" jobs]
run-test: ["dune" "runtest" "-p" name "-j" jobs]
