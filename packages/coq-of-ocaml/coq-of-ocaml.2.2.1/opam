authors: ["Guillaume Claret"]
license: "MIT"
build: [
  ["sh" "-c" "cd OCaml && ./configure.sh"] {coq:installed}
  [make "-C" "OCaml" "-j%{jobs}%"] {coq:installed}
  ["dune" "build" "-p" name "-j" jobs]
]
install: [
  [make "-C" "OCaml" "install"] {coq:installed}
]
depends: [
  "dune" {>= "1.11"}
  "ocaml" {>= "4.09" & < "4.10"}
  "ocamlfind" {>= "1.5.2"}
  "smart-print"
  "yojson" {>= "1.6.0"}
]
depopts: [
  "coq"
]
conflicts: [
  "coq" {< "8.11"}
]
tags: [
  "keyword:compilation"
  "keyword:ocaml"
  "logpath:OCaml"
]
synopsis: "Compile a subset of OCaml to Coq"

