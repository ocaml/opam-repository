opam-version: "1.2"
maintainer: "roberto@dicosmo.org"
homepage: "https://github.com/rdicosmo/parmap"
build: [
  ["aclocal" "-I" "m4"]
  ["autoconf"]
  ["autoheader"]
  ["./configure"] 
  [make "DESTDIR=%{prefix}%" "OCAMLLIBDIR=lib" ]
  [make "install" "DESTDIR=%{prefix}%" "OCAMLLIBDIR=lib"]
]
remove: [
  ["aclocal" "-I" "m4"]
  ["autoconf"]
  ["autoheader"]
  ["./configure"] 
  [make "uninstall" "DESTDIR=%{prefix}%" "OCAMLLIBDIR=lib"]
]
depends: ["ocamlfind"]
depexts: [
  [["ubuntu"] ["autoconf"]]
  [["debian"] ["autoconf"]]
]
