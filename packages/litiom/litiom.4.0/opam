build: [
    ["./configure" "--prefix" prefix "--docdir" "%{doc}%/litiom"]
    [make]
    [make "doc"]
]
install: [[make "install"]]
remove: [
  ["ocamlfind" "remove" "litiom"]
  ["rm" "-rf" litiom:doc]
]
