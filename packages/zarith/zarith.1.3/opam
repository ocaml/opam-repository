  [
    "env"
    "LDFLAGS=-L/usr/local/lib"
    "CC=cc"
    "CFLAGS=-I/usr/local/include -O3 -Wall -Wextra"
    "./configure"
  ] {os = "openbsd" | os = "freebsd" | os = "darwin"}
  [make]
]
