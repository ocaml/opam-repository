	  [ "rm" "%{bin}%/hevea" "%{bin}%/hacha" "%{bin}%/esponja" "%{bin}%/bibhva" ]
	  [ "rm" "%{bin}%/imagen" ] ]
post-messages: [
  "The file 'hevea.sty' has been installed in %{lib}%/hevea but latex won't see it by itself" {success}
]
