depends: [
  "tezos-tooling" { with-test & = version }
  "dune" { >= "1.11" }
  "ocaml" { >= "4.08.0" }
  "hex" {>= "1.3.0"}
  "lwt"
  "zarith"
  "bigstring" { with-test }
  "lwt_log" { with-test }
  "alcotest" { with-test & = "0.8.5" }
]
build: [
  ["dune" "build" "-p" name "-j" jobs]
  ["mv" "src/lib_stdlib/%{name}%.install" "./"]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
