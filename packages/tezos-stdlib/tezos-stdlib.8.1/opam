depends: [
  "dune" { >= "2.5" }
  "ocaml" { >= "4.8.0" }
  "hex"
  "lwt"
  "zarith"
  "bigstring" { with-test }
  "lwt_log" { with-test }
  "alcotest" { with-test & >= "1.1.0" }
  "alcotest-lwt" { with-test & >= "1.1.0" }
  "crowbar" { with-test }
]
build: [
  ["dune" "build" "-p" name "-j" jobs]
  ["mv" "src/lib_stdlib/%{name}%.install" "./"]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
