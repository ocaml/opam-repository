opam-version: "1"
maintainer: "contact@ocamlpro.com"
homepage: "http://lablgtk.forge.ocamlcore.org/"
build: [
  ["./configure" "--prefix" prefix "LABLGLDIR=%{lib}%/lablgl"]
  [make "world"]
  [make "install"]
]
remove: ["ocamlfind" "remove" "lablgtk2"]
depends: "ocamlfind"
depopts: [
  "conf-gtksourceview"
  "conf-gnomecanvas"
  "conf-glade"
  "lablgl"
]
depexts: [
  [["debian"] ["libgtk2.0-dev"]]
  [["ubuntu"] ["libgtk2.0-dev"]]
]
libraries: "lablgtk2"
patches: "lablgldir.patch"
post-messages: [
  "This package requires gtk+ 2.0 development packages installed on your system" {failure}
  "To solve pkg-config issues, you may need to do\n'export PKG_CONFIG_PATH=/opt/X11/lib/pkgconfig' (macports)\nor 'export PKG_CONFIG_PATH=/usr/local/lib/pkgconfig' (homebrew)\nand retry" {failure & os = "darwin"}
]
