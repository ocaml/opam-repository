  "ocaml" {>= "4.08.0" }
  "core_kernel" {>= "v0.14"}
  "ppx_bap" {>= "v0.14"}
  "bap-std" {= "2.2.0"}
  "regular" {= "2.2.0"}
  "fileutils"
]
synopsis: "A pass that adds parameters to subroutines based on known API"

