build: [
  ["./configure" "--prefix=%{prefix}%" "--enable-api"]
  [make]
]
install: [[make "install"]]
remove: [["ocamlfind" "remove" "bap-plugin-api"]
         ["ocamlfind" "remove" "bap-api"]
         ["bapbundle" "remove" "api.plugin"]
         ["rm" "-rf" "%{prefix}%/share/bap-api/c"]
         ]
depends: ["bap-std" "cmdliner"]
