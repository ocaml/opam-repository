  "ocaml" {>= "4.02.3"}
  "bap-std" {= "1.0.0"}
  "bap-traces" {= "1.0.0"}
  "cmdliner"
  "oasis" {build}
  "ounit"
  "pcre"
  "textutils" {< "v0.9"}
  "uri"
]
