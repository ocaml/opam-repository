  ["./configure" "--prefix=%{prefix}%"]
  [make "uninstall"]
]
depends: [
  "ocaml" {>= "4.03.0" & < "4.04.0"}
  "ocamlfind" {build}
  "batteries" {>= "2.3.1"}
  "cil" {>= "1.7.3"}
  "ocamlgraph" {>= "1.8.7"}
