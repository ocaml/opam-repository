  "dune" {> "3.13"}
  "frama-c" {>= "32.0~" & < "33.0~"}
  "zarith" {>= "1.5"}
  "camlp5"
  "camlp-streams"
  "conf-libclang" {>= "11.0.0" & < "20"}
  "conf-clang"
  "conf-cmake"
  "odoc" {with-doc}
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "--promote-install-files=false"
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
  ["dune" "install" "-p" name "--create-install-files" name]
]
