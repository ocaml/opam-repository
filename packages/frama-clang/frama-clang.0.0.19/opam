  ["dune" "subst"] {dev}
  [
    "env"
    "OPAM_LLVM_CONFIG=%{conf-libclang:config}%"
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "--promote-install-files=false"
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
  ["dune" "install" "-p" name "--create-install-files" name]
]
