dev-repo: "git+https://github.com/weng-chenghui/rocq-rouche-capelli.git"
tags: [
  "category:Mathematics/Algebra"
  "keyword:linear algebra"
  "keyword:matrix"
  "keyword:rank"
  "logpath:RoucheCapelli"
]
