  "ocaml" {>= "4.08.0" }
  "core_kernel" {>= "v0.14" & < "v0.16"}
  "ppx_bap"
  "zarith"
  "bap-std" {= "2.5.0"}
  "bap-primus" {= "2.5.0"}
  "bap-main" {= "2.5.0"}
