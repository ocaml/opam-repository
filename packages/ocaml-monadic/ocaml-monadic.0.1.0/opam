  "ocaml" {>= "4.02.0"}
  "oasis" {build & >= "0.4"}
  "ocamlfind" {build}
  "ocamlbuild" {build}
]
synopsis: "Lightweight monadic syntax extension."
description:
  "This project contains a lightweight PPX extension for OCaml to support natural monadic syntax."
