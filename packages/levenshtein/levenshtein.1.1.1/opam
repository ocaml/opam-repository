dev-repo: "hg://https://bitbucket.org/camlspotter/levenshtein"
build: [
  [ "ocaml" "setup.ml" "-configure" "--prefix" prefix ]
  [ "ocaml" "setup.ml" "-build" ]
]
install: [
  [ "ocaml" "setup.ml" "-install" ]
]
remove: [
  [ "ocaml" "setup.ml" "-configure" "--prefix" prefix ]
  [ "ocaml" "setup.ml" "-uninstall" ]
]
depends: [
  "ocamlfind" { build }
  "omake" { build }
  "ppx_test" { >= "1.0.1" }
]
available: [
  ocaml-version >= "4.02.1"
]
