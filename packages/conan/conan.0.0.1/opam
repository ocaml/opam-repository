  "dune"                {>= "2.9.0"}
  "uutf"
  "ptime"
  "alcotest"            {with-test}
  "crowbar"             {>= "0.2" & with-test}
  "fmt"                 {with-test}
  "rresult"             {with-test}
  "mirage"              {with-test & >= "3.7.0" & < "4.0"}
  "mirage-unix"         {with-test}
  "mirage-bootvar-unix" {with-test}
  "mirage-console-unix" {with-test}
