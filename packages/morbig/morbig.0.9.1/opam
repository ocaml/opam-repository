]
license: "GPL-3.0-only"

homepage: "https://github.com/colis-anr/morbig"
bug-reports: "https://github.com/colis-anr/morbig/issues"
dev-repo: "git://github.com/colis-anr/morbig.git"

available: [os != "macos"]
depends: [
  "menhir"
  "ocaml"                {build & >= "4.03"}
  "ocamlbuild"           {build}
  "ppx_deriving_yojson"
  "visitors"
  "yojson"
]

