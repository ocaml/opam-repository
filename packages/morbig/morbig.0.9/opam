dev-repo: "git://github.com/colis-anr/morbig.git"

available: [os != "macos"]
depends: [
  "menhir"               {build}
  "ocaml"                {build & >= "4.03"}
  "ocamlbuild"           {build}
  "ppx_deriving_yojson"
  "visitors"
  "yojson"
]

