  ["ocaml" "setup.ml" "-configure" "--enable-tests"
    "--%{ocamlfind:enable}%-graphics"
    "--enable-cairo2" { "%{cairo2:installed}%" }]
  ["ocaml" "setup.ml" "-build"]
  ["ocaml" "setup.ml" "-test"]
]
