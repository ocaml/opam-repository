  "ocaml" {>= "4.08.0"}
  "base-threads"
  "batteries"
  "dune" {>= "1.0"}
  "ocaml-monadic" {>= "0.4.1"}
  "ounit" {with-test}
  "ppx_deriving" {>= "2.0"}
  "ppx_deriving_yojson"
  "yojson" {>= "1.7.0"}
]
build: ["dune" "build" "-p" name "-j" jobs]
run-test: ["dune" "runtest" "-p" name "-j" jobs]
