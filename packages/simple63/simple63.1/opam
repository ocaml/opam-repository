depends: [
  "dune" {> "2.6"}
  "ocaml" {>= "4.08.0"}
  "ppx_inline_test" {with-test}
]
build: [
  ["dune" "subst"] {pinned}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
]

