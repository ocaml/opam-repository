  "ocaml" {>= "4.02.3"}
  "camlp5"
  "coq" {= "8.7.1" | = "8.7.1+1" | = "8.7.1+2"}
  "lablgtk"
  "conf-gtksourceview"
]
install: [
  make
  "install-ide-bin"
  "install-ide-files"
  "install-ide-info"
  "install-ide-devfiles"
]
