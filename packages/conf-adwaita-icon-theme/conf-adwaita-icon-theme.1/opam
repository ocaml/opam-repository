# E.g. on Centos8 there is no system package that does contain the .pc file.
build: [ "sh" "-c" "pkg-config --short-errors --print-errors adwaita-icon-theme || test -d /usr/share/icons/Adwaita"]
depends: [
  "conf-pkg-config" {build}
]
