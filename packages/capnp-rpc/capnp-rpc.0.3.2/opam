  "ocaml" {>= "4.03.0"}
  "uint" {< "2.0.0"}
  "astring"
  "fmt"
  "logs"
  "asetmap"
  "dune" {>= "1.0"}
  "alcotest" {with-test}
  "afl-persistent" {with-test}
]
