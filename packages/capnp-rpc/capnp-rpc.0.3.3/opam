  "ocaml" {>= "4.03.0"}
  "uint"
  "astring"
  "fmt"
  "logs"
  "asetmap"
  "dune" {>= "1.0"}
  "alcotest" {with-test}
  "afl-persistent" {with-test}
]
build: [
  ["dune" "build" "-p" name "-j" jobs]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
