  "ocaml" {>= "4.03.0"}
  "conf-capnproto" {build}
  "capnp" {>= "3.0.0" & < "3.4.0"}
  "capnp-rpc" {>= "0.3" & < "0.4"}
  "lwt"
  "astring"
  "fmt"
  "logs"
  "asetmap"
  "mirage-flow-lwt"
  "tls" {>= "0.8.0"}
  "mirage-kv-lwt"
  "mirage-clock"
  "base64" {>= "3.0.0"}
  "uri" {>= "1.6.0"}
  "ptime"
  "asn1-combinators" {>= "0.2.0"}
  "x509" {>= "0.7.0" & < "0.8.0"}
  "dune" {>= "1.0"}
]
build: [
  ["dune" "build" "-p" name "-j" jobs]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
