  "ppx_compare" { >= "v0.16.0" }
  "ppx_custom_printf" { >= "v0.16.0" }
  "decompress" { >= "1.4.1" }
  "eio_main" { >= "0.12" }
  "ptime" { >= "0.8.6" }

  "alcotest" { with-test }
