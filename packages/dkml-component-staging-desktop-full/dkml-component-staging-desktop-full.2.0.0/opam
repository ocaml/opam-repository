opam-version: "2.0"
synopsis:
  "Collection of end-user installers of the Full flavor of desktop executables"
description:
  "`desktop` provides desktop executables for all DKML installable platforms"
maintainer: ["opensource+diskuv-ocaml@support.diskuv.com"]
authors: ["Diskuv, Inc. <opensource+diskuv-ocaml@support.diskuv.com>"]
license: "Apache-2.0"
homepage: "https://gitlab.com/diskuv-ocaml/components/dkml-component-desktop"
doc:
  "https://gitlab.com/diskuv-ocaml/components/dkml-component-desktop/-/blob/main/README.md"
bug-reports:
  "https://gitlab.com/diskuv-ocaml/components/dkml-component-desktop/-/issues"
depends: [
  "dkml-build-desktop" {= version}
  "dkml-install" {>= "0.2.0"}
  "diskuvbox" {>= "0.1.0"}
  "dune" {>= "3.6" & = "3.8.3" | = "3.8.3+shim"}
  "base" {= "v0.16.1"}
  "csexp" {= "1.5.2"}
  "dkml-apps" {= "2.0.0"}
  "dkml-exe" {= "2.0.0"}
  "graphics" {= "5.1.2"}
  "lambda-term" {= "3.3.1"}
  "logs" {= "0.7.0"}
  "lwt" {= "5.6.1"}
  "lwt_react" {= "1.2.0"}
  "metapp" {= "0.4.4+win"}
  "mew" {= "0.1.0"}
  "mew_vi" {= "0.5.0"}
  "ocaml-compiler-libs" {= "v0.12.4"}
  "ocaml-lsp-server" {= "1.16.2"}
  "ocamlfind" {= "1.9.5"}
  "ocamlformat" {= "0.25.1"}
  "ocp-indent" {= "1.8.2-windowssupport"}
  "ocplib-endian" {= "1.2"}
  "odoc" {= "2.2.0"}
  "ppx_derivers" {= "1.2.1"}
  "ppxlib" {= "0.30.0"}
  "react" {= "1.2.2"}
  "refl" {= "0.4.1"}
  "result" {= "1.5"}
  "sexplib0" {= "v0.16.0"}
  "stdcompat" {= "19+optautoconf"}
  "stdlib-shims" {= "0.3.0"}
  "traverse" {= "0.3.0"}
  "trie" {= "1.0.0"}
  "uchar" {= "0.0.2"}
  "utop" {= "2.13.1"}
  "uucp" {= "15.0.0"}
  "uuseg" {= "15.0.0"}
  "uutf" {= "1.0.3"}
  "with-dkml" {= "2.0.0"}
  "xdg" {= "3.9.0"}
  "zed" {= "3.2.2"}
]
depopts: ["conf-withdkml"]
dev-repo:
  "git+https://gitlab.com/diskuv-ocaml/components/dkml-component-desktop.git"
available: [ ?dkml-sys-opam-exe ]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]

  # BEGIN build-flavor-full. DO NOT EDIT THE LINES IN THIS SECTION
  # Managed by bump-packages.cmake. TODO: Use [opam] from dkml-component-opam
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files base > opamshow-base.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files csexp > opamshow-csexp.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files graphics > opamshow-graphics.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files lambda-term > opamshow-lambda-term.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files logs > opamshow-logs.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files lwt > opamshow-lwt.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files lwt_react > opamshow-lwt_react.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files metapp > opamshow-metapp.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files mew > opamshow-mew.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files mew_vi > opamshow-mew_vi.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files ocaml-compiler-libs > opamshow-ocaml-compiler-libs.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files ocamlfind > opamshow-ocamlfind.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files ocplib-endian > opamshow-ocplib-endian.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files ppx_derivers > opamshow-ppx_derivers.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files ppxlib > opamshow-ppxlib.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files react > opamshow-react.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files refl > opamshow-refl.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files result > opamshow-result.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files sexplib0 > opamshow-sexplib0.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files stdcompat > opamshow-stdcompat.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files stdlib-shims > opamshow-stdlib-shims.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files traverse > opamshow-traverse.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files trie > opamshow-trie.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files uchar > opamshow-uchar.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files utop > opamshow-utop.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files uucp > opamshow-uucp.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files uuseg > opamshow-uuseg.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files uutf > opamshow-uutf.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files xdg > opamshow-xdg.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files zed > opamshow-zed.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files dkml-apps > opamshow-dkml-apps.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files dkml-exe > opamshow-dkml-exe.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files dune > opamshow-dune.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files ocaml-lsp-server > opamshow-ocaml-lsp-server.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files ocamlformat > opamshow-ocamlformat.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files ocp-indent > opamshow-ocp-indent.txt" ]
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files odoc > opamshow-odoc.txt" ]
  # END build-flavor-full. DO NOT EDIT THE LINES ABOVE

  # NOTE: Below ocaml.exe + binaries and stdlib can replace the now
  # wasted space of [staging-ocamlrun] in the installer

  # Need stdlib since can't mix end-user compiled stdlib with our currently compiled stdlib, or else:
  #   The files C:/Users/WDAGUT~1/AppData/Local/Programs/DISKUV~1/lib/ocaml\stdlib.cmi
  #      and C:\Users\WDAGUT~1\AppData\Local\Programs\DISKUV~1\desktop\bc\lib\logs\logs.cmi
  #      make inconsistent assumptions over interface CamlinternalFormatBasics
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files dkml-base-compiler | awk -f scripts/stdlib.awk > opamshow-stdlib.txt" ]

  # Need ocaml.exe and other binaries for "offline" installer
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files dkml-base-compiler | awk -f scripts/ocamlexe.awk > opamshow-ocamlexe.txt" ]

  # Overwrite opamshow-dkml-apps.txt to exclude what we staged in staging-dkmlconfdir. There should not be overlap.
  [ "sh" "-c" "'%{dkml-sys-opam-exe}%' show --list-files dkml-apps | grep -v dkml-confdir > opamshow-dkml-apps.txt" ]
]
install: [
  # BEGIN install-flavor-full. DO NOT EDIT THE LINES IN THIS SECTION
  # Managed by bump-packages.cmake
  [ "dkml-desktop-copy-installed" "--file-list" "opamshow-base.txt" "--opam-switch-prefix" "%{prefix}%" "--output-dir" "%{_:share}%/staging-files/%{dkml-abi}%/compile" ]
  [ "dkml-desktop-copy-installed" "--file-list" "opamshow-csexp.txt" "--opam-switch-prefix" "%{prefix}%" "--output-dir" "%{_:share}%/staging-files/%{dkml-abi}%/compile" ]
  [ "dkml-desktop-copy-installed" "--file-list" "opamshow-graphics.txt" "--opam-switch-prefix" "%{prefix}%" "--output-dir" "%{_:share}%/staging-files/%{dkml-abi}%/compile" ]
  [ "dkml-desktop-copy-installed" "--file-list" "opamshow-lambda-term.txt" "--opam-switch-prefix" "%{prefix}%" "--output-dir" "%{_:share}%/staging-files/%{dkml-abi}%/compile" ]
  [ "dkml-desktop-copy-installed" "--file-list" "opamshow-logs.txt" "--opam-switch-prefix" "%{prefix}%" "--output-dir" "%{_:share}%/staging-files/%{dkml-abi}%/compile" ]
  [ "dkml-desktop-copy-installed" "--file-list" "opamshow-lwt.txt" "--opam-switch-prefix" "%{prefix}%" "--output-dir" "%{_:share}%/staging-files/%{dkml-abi}%/compile" ]
