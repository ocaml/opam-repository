depends: [
  "dune" {>= "2.7"}
  "ocaml" {>= "4.08" & < "5.2"}
  "odoc" {with-doc}
]
depopts: [
  "ocaml-src" {with-test}
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
]
