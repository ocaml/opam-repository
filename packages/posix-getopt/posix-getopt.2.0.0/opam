  "dune" {> "2.5"}
  "dune-configurator"
  "ounit2" {with-test}
  "posix-uname" {with-test & = version}
  "ctypes"
  "posix-base" {= version}
  "unix-errno"
]
build: [
  ["dune" "subst"] {pinned}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
]
