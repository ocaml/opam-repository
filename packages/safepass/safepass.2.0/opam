build: [
  ["./configure" "--prefix" prefix "--docdir" "%{doc}%/safepass"]
  [make]
  [make "doc"]
]
install: [[make "install"]]
remove: [
  ["ocamlfind" "remove" "safepass"]
  ["rm" "-rf" safepass:doc]
]
depends: [
  "ocaml" {>= "4.02.0"}
  "ocamlfind" {build}
  "ocamlbuild" {build}
]
