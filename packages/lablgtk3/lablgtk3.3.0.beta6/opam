depends: [
  "ocaml"     {         >= "4.05.0" & < "4.09" }
  "dune"      {         >= "1.4.0"
                      & != "1.7.0"
                      & != "1.7.1"  } # Due to dune/dune#1833
  "dune-configurator"
  "conf-gtk3" { build & >= "18"     }
  "cairo2"    {         >= "0.6"    }
]

