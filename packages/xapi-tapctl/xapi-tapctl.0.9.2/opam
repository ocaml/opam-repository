build: [
  [make]
  [make "install" "BINDIR=%{bin}%"]
]
remove: [
  ["ocamlfind" "remove" "tapctl"]
  [make "uninstall" "BINDIR=%{bin}%"]
]
depends: [
  "ocamlfind"
  "xapi-stdext"
  "xapi-forkexecd"
] 
