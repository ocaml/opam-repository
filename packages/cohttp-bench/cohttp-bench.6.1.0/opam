doc: "https://mirage.github.io/ocaml-cohttp/"
bug-reports: "https://github.com/mirage/ocaml-cohttp/issues"
depends: [
  "dune" {>= "3.8"}
  "core" {>= "v0.13.0"}
  "core_bench"
  "eio" {>= "0.12"}
  "eio_main"
  "http" {= version}
  "cohttp" {= version}
  "cohttp-eio" {= version}
  "cohttp-lwt-unix" {= version}
  "cohttp-server-lwt-unix" {= version}
  "cohttp-async" {= version}
  "odoc" {with-doc}
]
