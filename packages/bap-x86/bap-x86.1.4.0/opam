  "ocaml" {>= "4.03" & < "4.06"}
  "bap-std" {= "1.4.0"}
  "bap-abi" {= "1.4.0"}
  "bap-c" {= "1.4.0"}
  "bap-llvm" {= "1.4.0"}
  "cmdliner"
]
