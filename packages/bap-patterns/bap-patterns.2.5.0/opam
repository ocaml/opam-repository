opam-version: "2.0"
maintainer: "Ivan Gotovchits <ivg@ieee.org>"
authors: "BAP Team"
homepage: "https://github.com/BinaryAnalysisPlatform/bap/"
bug-reports: "https://github.com/BinaryAnalysisPlatform/bap/issues"
dev-repo: "git+https://github.com/BinaryAnalysisPlatform/bap/"
license: "MIT"
build: [
  ["./configure" "--prefix=%{prefix}%" "--enable-patterns"]
  [make]
]

install: [[make "install"]]

remove: [
        ["ocamlfind" "remove" "bap-patterns"]
        ["ocamlfind" "remove" "bap-plugin-patterns"]
        ["bapbundle"   "remove" "patterns.plugin"]

]

depends: [
  "ocaml" {>= "4.08.0" }
  "core_kernel" {>= "v0.14" & < "v0.16"}
  "ppx_bap"
  "bap-core-theory" {= "2.5.0"}
  "bap-knowledge" {= "2.5.0"}
  "bap-main" {= "2.5.0"}
  "bap-std" {= "2.5.0"}
  "bitvec" {= "2.5.0"}
  "bitvec-order" {= "2.5.0"}
  "bitvec-binprot" {= "2.5.0"}
  "bitvec-sexp" {= "2.5.0"}
  "bap-relation" {= "2.5.0"}
  "zarith"
  "xmlm" {>= "1.3.0"}
  "uri" {>= "4.2.0"}
  "bap-primus" {= "2.5.0"}
  "fileutils"
]
synopsis: "Applies semantic actions to the matching byte patterns"
description: """
Applies semantic actions to the matching byte patterns. The patterns
are specified in an XML format, described below, and the actions are
implemented with Primus Lisp methods. Used to identify function starts,
instruction encodings, function names, etc."""

url {
  src: "https://github.com/BinaryAnalysisPlatform/bap/archive/v2.5.0.tar.gz"
  checksum: "md5=5abd9b3628b43f797326034f31ca574f"
  mirrors: "https://mirrors.aegis.cylab.cmu.edu/bap/2.5.0/v2.5.0.tar.gz"
}
