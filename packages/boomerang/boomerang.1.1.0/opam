  "ocaml" {>= "4.02.0" & < "4.04"}
  "base-unix"
  "core" {< "v0.10"}
  "ocamlbuild" {build}
  "ocamlfind" {build}
  "ppx_deriving"
  "ppx_hash" {< "v0.13"}
]
synopsis: "The Boomerang Language"
description: """
Boomerang is a programming language for writing lenses—well-behaved
bidirectional transformations—that operate on ad-hoc, textual data
formats."""
