  "base-bigarray"
  "conf-gmp"
  "conf-mpfr"
  "conf-m4" {build}
  "conf-perl" {build}
  "base-unix" {build}
  "num"
  "camlidl"
  "extlib" {build} | "extlib-compat" {build}
  "lustre-v6"
  "lutils" {>= "1.49"}
  "mlgmpidl"
  "oasis" {build & >= "0.4.7"} | "oasis-mirage" {build & >= "0.4.7"}
  "ocamlbuild" {build}
