license: "MIT"
depends: [
  "dune" { >= "2.5" }
  "tezos-hacl-glue" { = version }
  "hacl-star" { >= "0.4.2" & < "0.5" }
]
conflicts: [
  "hacl_x25519"
]
build: [
  ["rm" "-r" "vendors"]
  ["dune" "build" "-p" name "-j" jobs]
  ["mv" "src/lib_hacl_glue/unix/%{name}%.install" "./"]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
synopsis: "Tezos: thin layer of glue around hacl-star (unix implementation)"

