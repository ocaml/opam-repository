  "ocaml" {>= "4.04.0"}
  "dune" {>= "1.0.0"}
  "jupyter" {>= "2.7.2"}
  "cairo2" {>= "0.6"}
  "archimedes"
  "ocp-indent" {with-test & >= "1.7.0"}
]
