  "dune" {>= "2.7"}
  "jsonm" {>= "1.0.1"}
  "mustache" {= version}
  "cmdliner" {>= "1.1.0"}
  "ocaml" {>= "4.08"}
  "odoc" {with-doc}
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
]
