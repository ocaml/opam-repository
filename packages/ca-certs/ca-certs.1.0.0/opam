  "fpath"
  "ptime"
  "logs"
  "digestif" {>= "1.2.0"}
  "mirage-crypto" {>= "1.0.0"}
  "x509" {>= "1.0.0"}
  "ocaml" {>= "4.13.0"}
  "ohex" {>= "0.2.0"}
  "alcotest" {with-test}
  "fmt" {with-test & >= "0.8.7"}
]
conflicts: [
  "result" {< "1.5"}
]
