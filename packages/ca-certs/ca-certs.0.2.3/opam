  "dune" {>= "2.0"}
  "astring"
  "bos"
  "fpath"
  "ptime"
  "logs"
  "mirage-crypto" {< "1.0.0"}
  "x509" {>= "0.13.0"}
  "ocaml" {>= "4.08.0"}
  "alcotest" {with-test}
  "fmt" {with-test & >= "0.8.7"}
]
conflicts: [
  "result" {< "1.5"}
]
dev-repo: "git+https://github.com/mirage/ca-certs.git"
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
