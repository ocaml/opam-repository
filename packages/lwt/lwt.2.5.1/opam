  "ocaml" {>= "4.01.0" & < "4.03.0"}
  "ocamlfind" {build & >= "1.5.0"}
  ("base-no-ppx" | "ppx_tools")
  "ocamlbuild" {build}
  "conf-ncurses" {build}
]
