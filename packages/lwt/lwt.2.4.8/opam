opam-version: "1.2"
maintainer: "jerome.vouillon@pps.univ-paris-diderot.fr"
build: [
  ["./configure"
    "--prefix" prefix
    "--%{conf-libev:enable}%-libev"
    "--%{camlp4:enable}%-camlp4"
    "--%{react:enable}%-react"
    "--%{ssl:enable}%-ssl"
    "--%{base-unix:enable}%-unix"
    "--%{base-threads:enable}%-preemptive"
    "--%{lablgtk:enable}%-glib"
    "--%{ppx_tools:enable}%-ppx"]
  [make "build"]
  [make "install"]
]
remove: [["ocamlfind" "remove" "lwt"]]
depends: [
  "ocamlfind" {>= "1.5.0"}
  ("base-no-ppx" | "ppx_tools")
  "ocamlbuild" {build}
]
depopts: [
  "base-threads"
  "base-unix"
  "conf-libev"
  "camlp4"
  "ssl"
  "react"
  "lablgtk"
]
conflicts: [
 "react" {<"1.0.0"}
]
