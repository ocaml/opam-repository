  "ocaml"                {         >= "4.05.0"    }
  "dune"                 {         >= "1.6.0"
                                 & != "1.7.0"
                                 & != "1.7.1"     } # Due to dune/dune#1833
  "lablgtk3"             {          = version     }
]
