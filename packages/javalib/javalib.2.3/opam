  src:
    "https://github.com/ocaml/opam-source-archives/raw/main/javalib-2.3.tar.bz2"
  checksum: [
    "sha256=5214f8fd0c29b6bd8b423fdb254f07137c76867772541a790545d46f15930dc5"
