  "ppx_deriving"
  "ppx_sexp_conv"
  "sha" {>= "1.15.4"}
  "sqlite3"
  "crunch" {>= "3.3.1" & build}
  "obuilder-spec" {= version}
  "fpath"
  "extunix" {>= "0.4.0"}
  "ocaml" {>= "4.14.1"}
  "alcotest-lwt" {>= "1.7.0" & with-test}
  "odoc" {with-doc}
  "conf-which" {with-test}
  "conf-bash" {with-test}
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
]
