build: [
  [ "dune" "subst" ] {dev}
  [ "dune" "build" "-p" name "-j" jobs ]
  [ "dune" "runtest" "-p" name ] {with-test & !base-effects:installed & ocaml:version < "5.0"}
  [ "dune" "build" "@doc" "-p" name ] {with-doc}
]

