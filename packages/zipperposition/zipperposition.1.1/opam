remove: [
  ["ocamlfind" "remove" "logtk"]
  ["ocamlfind" "remove" "libzipperposition"]
  ["rm" "-f" "%{bin}%/zipperposition"]
  ["rm" "-f" "%{bin}%/hornet"]
]
