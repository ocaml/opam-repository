build: [
  [
    "./configure"
    "--bindir"
    "%{bin}%"
    "--disable-tests"
    "--disable-docs"
    "--%{menhir+tip-parser:enable}%-parsers"
    "--disable-hornet-prover"
    "--enable-zipperposition-prover"
    "--disable-solving"
    "--disable-qcheck"
    "--disable-tools"
  ]
  [make]
]
