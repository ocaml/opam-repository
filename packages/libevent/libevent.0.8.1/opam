  ["libevent-dev"] {os-distribution = "debian"}
  ["libevent-dev"] {os-distribution = "ubuntu"}
  ["libevent-devel"] {os-distribution = "fedora"}
  ["libevent-devel"] {os-distribution = "centos"}
