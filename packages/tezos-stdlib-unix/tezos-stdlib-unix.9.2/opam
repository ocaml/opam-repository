depends: [
  "base-unix"
  "dune" { >= "2.5" }
  "tezos-event-logging" { = version }
  "re" { >= "1.7.2" }
  "ptime" { >= "0.8.4" }
  "mtime" { >= "1.0.0" }
  "conf-libev"
  "ipaddr" { >= "4.0.0" }
  "ezjsonm" { >= "1.1.0" }
  "fmt" { >= "0.8.7" }
]
build: [
  ["rm" "-r" "vendors"]
  ["dune" "build" "-p" name "-j" jobs]
  ["mv" "src/lib_stdlib_unix/%{name}%.install" "./"]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
