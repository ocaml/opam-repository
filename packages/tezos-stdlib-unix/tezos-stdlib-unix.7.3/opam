  "tezos-tooling" { with-test & = version }
  "base-unix"
  "dune" { >= "1.11" }
  "tezos-event-logging" { = version }
  "tezos-rpc" { = version }
  "lwt" { >= "3.0.0" & < "5.6.0" }
  "ptime" { >= "0.8.4" }
  "mtime" {>= "1.0.0" & < "2.0.0"}
  "conf-libev"
  "ipaddr" { >= "4.0.0" }
  "uri" { < "4.0.0" }
]
conflicts: [
  "domain-name" {>= "0.3.1"}
  "ezjsonm" {< "1.1.0"}
  "fmt" {< "0.8.7"}
]
build: [
  ["dune" "build" "-p" name "-j" jobs]
  ["mv" "src/lib_stdlib_unix/%{name}%.install" "./"]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
