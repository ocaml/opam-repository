  "base-unix"
  "dune" { >= "2.5" }
  "tezos-event-logging" { = version }
  "re" { >= "1.7.2" }
  "ptime" { >= "0.8.4" }
  "mtime" { >= "1.0.0" & < "2.0.0" }
  "conf-libev"
  "ipaddr" { >= "4.0.0" }
  "ezjsonm" { >= "1.1.0" }
  "fmt" { >= "0.8.7" }
]
