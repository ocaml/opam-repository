depends: [
  "base-unix"
  "dune" { >= "2.9" }
  "tezos-event-logging" { = version }
  "re" { >= "1.7.2" }
  "ezjsonm" { >= "1.1.0" }
  "ptime" { >= "0.8.4" }
  "mtime" {>= "1.0.0" & < "2.0.0"}
  "conf-libev"
  "ipaddr" { >= "5.0.0" }
]
build: [
  ["rm" "-r" "vendors"]
  ["dune" "build" "-p" name "-j" jobs]
  ["mv" "src/lib_stdlib_unix/%{name}%.install" "./"]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
