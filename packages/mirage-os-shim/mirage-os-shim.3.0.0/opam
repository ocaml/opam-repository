  "ocaml" "pkg/pkg.ml" "build" "--pinned" "%{pinned}%" "--tests" "false"
          "--with-mirage-unix" "%{mirage-unix:installed}%"
          "--with-mirage-xen" "%{mirage-xen:installed}%"
          "--with-mirage-solo5" "%{mirage-solo5:installed}%"
