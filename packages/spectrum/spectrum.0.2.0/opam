depends: [
  "dune" {>= "2.8"}
  "ocaml" {>= "4.08"}
  "color" {>= "0.2" & < "0.3"}
  "alcotest" {with-test & >= "1.4" & < "1.5"}
  "junit_alcotest" {with-test & >= "2.0" & < "2.1"}
  "odoc" {with-doc}
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "@install"
    "@runtest" {with-test & ocaml:version >= "4.10"}
    "@doc" {with-doc}
  ]
]
