opam-version: "2.0"
maintainer: "contact@tezos.com"
authors: [ "Tezos devteam" ]
homepage: "https://www.tezos.com/"
bug-reports: "https://gitlab.com/tezos/tezos/issues"
dev-repo: "git+https://gitlab.com/tezos/tezos.git"
license: "MIT"
depends: [
  "dune" { >= "2.0" }
  "tezos-stdlib" { = version }
  "data-encoding" { >= "0.3" & < "0.4" }
  "tezos-error-monad" { = version }
  "tezos-lwt-result-stdlib" { = version }
  "tezos-rpc" { = version }
  "tezos-clic" { = version }
  "lwt"
  "bls12-381" { < "0.5" }
  "tezos-hacl-glue" { = version }
  "tezos-hacl-glue-unix" {with-test& = version }
  "zarith"
  "secp256k1-internal"
  "ringo" { = "0.5" }
  "bls12-381-unix" { with-test }
  "qcheck-alcotest" { with-test }
  "tezos-test-helpers" { with-test & = version }
  "alcotest-lwt" { with-test & >= "1.1.0" }
]
build: [
  ["rm" "-r" "vendors"]
  ["dune" "build" "-p" name "-j" jobs]
  ["mv" "src/lib_crypto/%{name}%.install" "./"]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
synopsis: "Tezos: library with all the cryptographic primitives used by Tezos"

