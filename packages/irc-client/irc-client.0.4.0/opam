  "ocaml" {>= "4.00.1"}
  "oasis" {build & >= "0.4.2"}
  "ocamlbuild" {build}
  "ocamlfind" {build}
  "result"
  "ounit" {with-test}
]
depopts: [
  "base-unix"
  "lwt"
  "tls"
]
