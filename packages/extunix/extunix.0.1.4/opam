  src:
    "https://ygrek.org/p/release/ocaml-extunix/ocaml-extunix-0.1.4.tar.gz"
  checksum: "md5=d4ac544b276fb8717d5c75e032b33577"
  mirrors:
    "https://github.com/ygrek/extunix/releases/download/v0.1.4/ocaml-extunix-0.1.4.tar.gz"
}
