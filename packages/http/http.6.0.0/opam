depends: [
  "dune" {>= "3.8"}
  "ocaml" {>= "4.08"}
  "ppx_expect" {with-test & >= "v0.17.0"}
  "alcotest" {with-test & >= "1.7.0"}
  "base_quickcheck" {with-test}
  "ppx_assert" {with-test}
  "ppx_sexp_conv" {with-test}
  "ppx_compare" {with-test}
  "ppx_here" {with-test}
  "crowbar" {with-test & >= "0.2"}
