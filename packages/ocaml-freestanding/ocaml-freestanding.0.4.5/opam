  "conf-pkg-config"
  "ocamlfind" {build}
  "ocaml-src" {build}
  ("solo5-bindings-hvt" | "solo5-bindings-spt" | "solo5-bindings-virtio" | "solo5-bindings-muen" | "solo5-bindings-genode")
  "ocaml" {>= "4.05.0" & < "4.08.1"}
]
