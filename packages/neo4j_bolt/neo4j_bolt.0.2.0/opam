opam-version: "2.0"
maintainer: "yousleepwhen <yousleepwhen@gmail.com>"
authors: ["yousleepwhen <yousleepwhen@gmail.com>"]
license: "MIT"
homepage: "https://github.com/jeong-sik/ocaml-neo4j-bolt"
bug-reports: "https://github.com/jeong-sik/ocaml-neo4j-bolt/issues"
dev-repo: "git+https://github.com/jeong-sik/ocaml-neo4j-bolt.git"
synopsis: "Pure OCaml Neo4j Bolt protocol client"
description: """
Pure OCaml implementation of the Neo4j Bolt protocol.
Supports Bolt 4.x/5.x with PackStream binary serialization.
Uses Lwt for async I/O with configurable timeouts.

Environment variables:
- NEO4J_HOST (default: localhost)
- NEO4J_PORT (default: 7687)
- NEO4J_USERNAME (default: neo4j)
- NEO4J_PASSWORD
- NEO4J_TIMEOUT (default: 30.0)
"""
build: [
  ["dune" "subst"] {dev}
  ["dune" "build" "-p" name "-j" jobs "@install" "@runtest" {with-test}]
]
depends: [
  "ocaml" {>= "4.14"}
  "dune" {>= "3.0"}
  "lwt" {>= "5.6"}
  "lwt_ppx" {>= "2.1"}
  "yojson" {>= "2.0"}
  "alcotest" {with-test & >= "1.7"}
  "alcotest-lwt" {with-test & >= "1.7"}
]
