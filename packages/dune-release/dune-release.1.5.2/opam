]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "@install"
    "@runtest" {with-test & !(os-distribution = "centos" & os-version < "8") & !(os-distribution = "ol" & os-version < "8")} # Disable the tests on distributions that have old versions of git
    "@doc" {with-doc}
  ]
]
