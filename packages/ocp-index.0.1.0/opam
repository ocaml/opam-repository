opam-version: "1"
maintainer: "contact@ocamlpro.com"
build: [
  [ "ocp-build" "-init" ]
  [ "ocp-build" "ocp-index-lib" "ocp-index"
      "ocp-browser" "{curses:installed}" ]
  [ "ocp-build" "install" "ocp-index-lib" "ocp-index"
      "ocp-browser" "{curses:installed}" ]
]
remove: [
  [ "ocp-build" "-init" ]
  [ "ocp-build" "uninstall" "ocp-index-lib" "ocp-index"
      "ocp-browser" "{curses:installed}" ]
]
depends: [
  "ocp-build" {>= "1.99.4-beta"}
]
depopts: [
  "curses"
]
homepage: "https://github.com/OCamlPro/ocp-index"
