  [make]
  [make "install"]
]
remove: [
  ["./configure" "-install-bin" "%{bin}%"
                 "-install-lib" "%{lib}%"
                 "-install-doc" "%{doc}%/ocaml-top"
                 "-install-data" "%{prefix}%/share/ocaml-top"]
  [make "uninstall"]
]
