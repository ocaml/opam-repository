  "ptime" { >= "0.8.4" }
  "ipaddr" {>= "5.0.0" & < "6.0.0"}
  "tezos-test-helpers" { with-test & = version }
  "qcheck-alcotest" { with-test }
]
build: [
  ["rm" "-r" "vendors"]
  ["dune" "build" "-p" name "-j" jobs]
  ["mv" "src/lib_base/%{name}%.install" "./"]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
