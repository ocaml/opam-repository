depends: [
  "tezos-tooling" { with-test & = version }
  "dune" { >= "1.11" }
  "tezos-clic" { = version }
  "tezos-crypto" { = version }
  "tezos-micheline" { = version }
  "ptime" { >= "0.8.4" }
  "ezjsonm" { >= "0.5.0" }
  "ipaddr" { >= "4.0.0" & < "5.0.0" }
  "re" { >= "1.7.2" }
]
build: [
  ["dune" "build" "-p" name "-j" jobs]
  ["mv" "src/lib_base/%{name}%.install" "./"]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
