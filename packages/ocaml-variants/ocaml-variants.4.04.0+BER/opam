synopsis: "BER-N104 MetaOCaml"
maintainer: "platform@lists.ocaml.org"
depends: [
  "ocaml" {= "4.04.0" & post}
  "base-unix" {post}
  "base-bigarray" {post}
  "base-threads" {post}
  "base-metaocaml-ocamlfind" {post}
]
