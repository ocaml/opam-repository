  [ "./configure"
      "--enable-docs"
      "--prefix" "%{prefix}%"
      "--docdir" "%{doc}%/ocaml-lua"
      "--libdir" "%{lib}%/ocaml-lua" ]
  [make]
  [make "doc"]
  [make "install"]
]
remove: [
  ["ocamlfind" "remove" "lua"]
]
