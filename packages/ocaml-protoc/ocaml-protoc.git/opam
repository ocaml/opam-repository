license: "MIT"
build: [
  [make "lib.byte"]   
  [make "lib.native"]
  [make "bin.native"]
]
install: [
  [make "lib.install" ]
  [make "bin.install" "PREFIX=%{prefix}%" "BINDIR=%{bin}%"]
]
remove:  [make "uninstall" "PREFIX=%{prefix}%" "BINDIR=%{bin}%"]
depends: [
  "ocaml" {>="4.02.1"}
  "ocamlfind"  {build}
  "ocamlbuild" {build}
  "ppx_deriving_protobuf"
]
available: [ opam-version >= "1.2" ]
