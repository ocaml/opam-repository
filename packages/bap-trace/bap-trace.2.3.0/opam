opam-version: "2.0"
maintainer: "Ivan Gotovchits <ivg@ieee.org>"
authors: "BAP Team"
homepage: "https://github.com/BinaryAnalysisPlatform/bap/"
bug-reports: "https://github.com/BinaryAnalysisPlatform/bap/issues"
dev-repo: "git+https://github.com/BinaryAnalysisPlatform/bap/"
license: "MIT"
build: [
  ["./configure"
                 "--prefix=%{prefix}%"
                 "--mandir=%{man}%"
                 "--enable-trace"]
  [make]
]

install: [
  [make "install"]
]

remove: [
        ["ocamlfind" "remove" "bap-plugin-trace"]
        ["bapbundle" "remove" "trace.plugin"]
        ]

depends: [
  "ocaml" {>= "4.08.0" }
  "core_kernel" {>= "v0.14"}
  "ppx_bap" {>= "v0.14"}
  "oasis" {build & >= "0.4.7"}
  "bap-std" {= "2.3.0"}
  "bap-traces" {= "2.3.0"}
  "bap-future" {= "2.3.0"}
  "regular" {= "2.3.0"}
  "uri"
  "cmdliner"
]
synopsis: "A plugin to load and run program execution traces"

url {
  src: "https://github.com/BinaryAnalysisPlatform/bap/archive/v2.3.0.tar.gz"
  checksum: [
    "sha256=a6e80853aaaa26b7ca564d9878891d7146ec1c83852541387c1bba1ad036b8ea"
