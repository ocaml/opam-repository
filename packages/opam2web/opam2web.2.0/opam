  "js_of_ocaml" {>= "2.4.1" & < "3.3.0"}
  "js_of_ocaml-ppx"
  "opam-core" {>= "2.0.0"}
  "opam-format" {>= "2.0.0"}
  "opam-state" {>= "2.0.0"}
  "opam-client" {>= "2.0.0"}
  "cohttp-lwt-unix"
  "yojson" {>= "1.6.0"}
]
build: ["dune" "build" "-p" name "-j" jobs]
