opam-version: "1"
maintainer: "contact@ocamlpro.com"
patches: [ "1.5.4-sed-bsd-compat.patch" ]
build: [
  [
    "sh" "./configure"
    "-bindir"
    bin
    "-sitelib"
    lib
    "-mandir"
    man
    "-config"
    "%{lib}%/findlib.conf"
    "-no-topfind" {preinstalled}
  ]
  [make "all"]
  [make "opt"]
]
remove: [
  ["ocamlfind" "remove" "bytes"]
  ["sh" "./configure" "-bindir" bin "-sitelib" lib "-mandir" man "-config" "%{lib}%/findlib.conf" "-no-custom" "-no-topfind" {preinstalled}]
  [make "uninstall"]
]
depends: [
  "conf-m4"
]
available: [ocaml-version >= "3.12.0"] # ocamlfind refers to cmxs
install: [make "install"]
