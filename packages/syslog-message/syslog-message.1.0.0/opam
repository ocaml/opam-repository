depends: [
  "ocaml" {>= "4.03.0"}
  "dune" {>= "1.1.0"}
  "astring"
  "ptime"
  "rresult"
  "qcheck" {with-test}
]
build: [
  ["dune" "subst"] {pinned}
  ["dune" "build" "-p" name "-j" jobs]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
