  "ocaml" {>= "5.0"}
  "dune" {>= "3.20"}
  "lwt" {>= "5.7.0"}
  "lwt_ppx" {>= "2.1.0"}
  "yojson" {>= "2.0"}
  "re" {>= "1.11.0"}
  "uri" {>= "4.0"}
  "logs" {>= "0.7.0"}
  "fmt" {>= "0.9.0"}
  "odoc" {with-doc}
]
