  "ocaml"    {>= "4.03.0"}
  "dune"     {>= "2.0.0"}
  "fmt"
  "bigarray-compat"
  "stdlib-shims"
  "alcotest"    {with-test}
  "bigstringaf" {with-test}
  "hxd"         {with-test & >= "0.3.1"}
  "crowbar"     {with-test}
]

