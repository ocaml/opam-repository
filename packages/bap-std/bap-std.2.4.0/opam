  "conf-gmp"
  "conf-clang"
  "conf-perl"
  "conf-m4"
  "conf-which"
]
depexts: [
  ["libzip-dev"] {os-distribution = "ubuntu"}
  ["libzip"] {os = "macos" & os-distribution = "macports"}
  ["binutils" "libzip-dev" "zlib-dev"] {os-distribution = "alpine"}
]
conflicts: [
  "fileutils" {= "0.5.0"}
  "jbuilder" {= "1.0+beta18"}
]
