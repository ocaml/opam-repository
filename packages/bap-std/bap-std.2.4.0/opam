  "bap-core-theory" {= "2.4.0"}
  "bap-bundle" {= "2.4.0"}
  "bap-main" {= "2.4.0"}
  "bap-plugins" {= "2.4.0"}
  "bap-relation" {= "2.4.0"}
  "camlzip" {>= "1.07"}
  "core_kernel" {>= "v0.14" & < "v0.15"}
  "bin_prot" {>= "v0.14" & < "v0.15"}
  "fileutils"
  "graphlib" {= "2.4.0"}
  "oasis" {build & >= "0.4.7"}
  "ocamlfind" {>= "1.5.6" & < "2.0"}
  "ppx_bap" {>= "v0.14" & < "v0.15"}
  "regular" {= "2.4.0"}
  "uri"
  "utop" {build & >= "2.0.0"}
  "uuidm"
  "zarith"
  "cmdliner" {>= "0.9.8"}
  "ogre" {= "2.4.0"}
