    "ocaml"
    "setup.ml"
    "-configure"
    "--%{lwt:enable}%-lwt"
    "--prefix"
    prefix
    "--enable-tests"
  ] {with-test}
  ["ocaml" "setup.ml" "-build"] {with-test}
  ["ocaml" "setup.ml" "-test"] {with-test}
]
