license: "MIT"
depends: [
  "dune" { >= "2.0" }
  "tezos-base" { = version }
  "resto-directory" { = "0.5" }
  "resto-cohttp" { = "0.5" }
]
build: [
  ["rm" "-r" "vendors"]
  ["dune" "build" "-p" name "-j" jobs]
  ["mv" "src/lib_rpc_http/%{name}%.install" "./"]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
synopsis: "Tezos: library of auto-documented RPCs (http server and client)"

