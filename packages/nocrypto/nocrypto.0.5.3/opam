build: [
  [
    "./configure"
    "--prefix"
    prefix
    "--%{lwt:enable}%-lwt"
    "--%{mirage-xen+mirage-entropy-xen:enable}%-xen"
  ]
  [make]
  ["./configure" "--%{ounit:enable}%-tests"] {with-test}
  [make "test"] {with-test}
]
install: [ make "install" ]
remove:  [ "ocamlfind" "remove" "nocrypto" ]

depends: [
  "ocaml" {>= "4.02.0" & < "4.06.0"}
  "ocamlfind" {build}
  "oasis" {build & >= "0.4.2"}
  "ocamlbuild" {build}
  "cstruct" {>= "1.6.0" & < "3.0.0"}
  "zarith"
  "sexplib" {< "v0.11.0"}
  "ppx_deriving"
  "ppx_sexp_conv" {>= "113.33.01" & < "v0.11.0"}
  "mirage-no-xen" | ("mirage-xen" "mirage-entropy-xen" "zarith-xen")
  "ounit" {with-test}
]
depopts: [
  "lwt"
]

conflicts: [
  "mirage-xen" {<"2.2.0"}
  "mirage-entropy-xen" {<"0.3.0"}
  "sexplib" {="v0.9.0"}
]

