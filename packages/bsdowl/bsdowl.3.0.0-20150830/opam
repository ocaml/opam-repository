build: [
  ["./configure" "--prefix" prefix]
  ["bmake" "-r" "build"] {os != "freebsd"}
  ["make" "-r" "build"]  {os  = "freebsd"}
]
install: [
  ["bmake" "install"] {os != "freebsd"}
  ["make" "install"]  {os  = "freebsd"}
]
remove: [
  ["sh" "%{build}%/opam/files/remove.sh" prefix]
]
