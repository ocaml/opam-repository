  "ocaml"
  "menhir"
  "ocamlfind"
  "pcre"
  "stdcompat"
  "pyml"
  "conf-pkg-config"
  "conf-python-3-dev"
  "conf-autoconf"
  "parmap"
  "num"
]
synopsis: "Coccinelle is a C source code matching and transformation engine"
description: """
Coccinelle provides the language SmPL (Semantic Patch Language) for specifying
desired matches and transformations in C code."""
