  ["rm" "-f"  "%{prefix}%/bin/pycocci"]
  ["rm" "-rf" "%{prefix}%/lib/coccinelle"]
  ["rm" "-f"  "%{prefix}%/share/man/man1/spatch.1"]
  ["rm" "-f"  "%{prefix}%/share/man/man1/pycocci.1"]
  ["rm" "-f"  "%{prefix}%/share/man/man3/Coccilib.3cocci"]
]
