build: [
    ["bash" "-c" "echo \"Your Qt version is `qmake -query QT_VERSION`\"" ]
    ["bash" "-c" "min=\"5.2.1\"; cur=`qmake -query QT_VERSION`; res=`echo -e \"$min\\n$cur\" | sort | head -n 1`; [ \"$res\" = \"$min\" ]"
    ]
]

available: [ os != "darwin" ]

