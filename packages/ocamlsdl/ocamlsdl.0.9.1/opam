opam-version: "1"
maintainer: "contact@ocamlpro.com"
build: [
  [
    "sh" "./configure"
    "--with-installdir=%{lib}%/ocamlsdl"
    "--with-lablgldir=%{lib}%/lablgl" {"%{lablgl:installed}%"}
  ]
  [make]
]
remove: [["ocamlfind" "remove" "sdl"]]
depends: ["ocamlfind"]
depopts: [
  "lablgl"
  "conf-sdl-gfx"
  "conf-sdl-image"
  "conf-sdl-mixer"
  "conf-sdl-ttf"
]
depexts: [
   [["debian"] ["libsdl1.2-dev"]]
   [["ubuntu"] ["libsdl1.2-dev"]]
   [["osx" "homebrew"] ["sdl"]]
]
install: [make "install"]
