opam-version: "1.2"
maintainer: "sheets@alum.mit.edu"
tags: "org:mirage"
dev-repo: "git://github.com/dsheets/ocaml-sodium"
build: [
  [make] {os != "freebsd"}
  ["env" "IS_FREEBSD=true" make] {os = "freebsd"}
  [make "PREFIX=%{prefix}%" "install"]
]
remove: ["ocamlfind" "remove" "sodium"]
depends: [
  "base-bigarray"
  "base-bytes"
  "ocamlfind"
  "ctypes" {>= "0.3.2"}
]
depexts: [
  [["debian"] ["libsodium-dev"]]
  [["freebsd"] ["security/libsodium"]]
  [["homebrew" "osx"] ["libsodium"]]
  [["linux" "source"] ["https://gist.github.com/avsm/9037146/raw"]]
]
available: [ocaml-version >= "4.01.0"]
