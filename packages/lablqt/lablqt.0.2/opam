opam-version: "1.2"
maintainer: "kakadu.hafanana@gmail.com"
build: [
  ["./configure"]
  [make "generator"]
  ["bash" "-c" "cd lablqml && ./configure --datarootdir=%{lib}% && %{make}%" ]
  [make "opam.install" ]
]
remove: [
  ["ocamlfind" "remove" "lablqml"]
  ["rm" "-f" "%{prefix}%/bin/mocml" "%{man}%/man1/mocml.1"]
]
depends: [
  "core_kernel"
  "yojson"
  "conf-qt" {>= "5.2"}
  "ocamlbuild" {build}
]
dev-repo: "git://github.com/Kakadu/lablqt"
