opam-version: "1.2"
maintainer: "kakadu.hafanana@gmail.com"
dev-repo: "git://github.com/Kakadu/lablqt"
build: [
  ["./configure"]
  [make "generator"]
  ["bash" "-c" "cd lablqml && ./configure --datarootdir=%{lib}% && %{make}%"]
  [make "opam.install"]
]
remove: [
  ["ocamlfind" "remove" "lablqml"]
  ["rm" "-f" "%{prefix}%/bin/ppx_qt"]
]
depends: [
  "ocamlfind"
  "conf-qt" {>= "5.2.1"}
]
ocaml-version: [>= "4.02.0"]
