build: [
  [
    "./configure"
    "--prefix" prefix
    "--%{lwt:enable}%-lwt"
    "--%{base-unix:enable}%-unix"
    "--enable-docs"
  ]
  [make "build"]
]
build-test: [
  [
    "./configure"
    "--enable-tests"
  ]
  [make "test"]
  [make "test-interop-sclang"]
]
install: [
  [make "PREFIX=%{prefix}%" "install"]
]
remove: [
  ["ocamlfind" "remove" "osc"]
]
depends: [
  "oasis" {build}
  "ocamlbuild" {build}
  "ocamlfind" {build}
  "ocplib-endian"
  "rresult"
  "ounit" {test}
]
depopts: [
  "base-unix"
  "lwt"
]
conflicts: [
  "lwt" {< "2.7.0"}
]
