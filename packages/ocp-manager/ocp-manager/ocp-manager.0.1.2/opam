opam-version: "1"
maintainer: "Fabrice Le Fessant <fabrice.le_fessant@ocamlpro.com>"
build: [
  [ "./configure" "--prefix" prefix  ]
  [ make ]
  [ make "install.opam" ]
]
remove: [
  [ "rm" "-f" "%{prefix}%/ocp-manager" ]
  [ "rm" "-f" "%{prefix}%/man/man1/ocp-manager.1" ]
]
depends: [ "ocp-build" ]

