  [ "rm" "-f" "%{prefix}%/ocp-manager" ]
  [ "rm" "-f" "%{prefix}%/man/man1/ocp-manager.1" ]
]
depends: [
  "ocaml" {< "4.03.0"}
  "ocp-build" {>= "1.99.6" & < "1.99.17"}
]
install: [make "install.opam"]
synopsis: "Global Manager for OCaml versions and OPAM switches"
flags: light-uninstall
