  "ocaml" {>= "4.03.0"}
  "dune"
  "cmdliner" {>= "0.9.8"}
  "fmt"
  "functoria" {with-test & >= "2.2.0" & < "3.0.0"}
  "alcotest"  {with-test}
  "dune" {with-test & <= "1.5.1"}
]

