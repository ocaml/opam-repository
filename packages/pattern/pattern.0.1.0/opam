dev-repo: "git+https://gitlab.inria.fr/tmartine/pattern.git"
build: [["dune" "build" "-p" name "-j" jobs]]
depends: [
  "dune" {>= "1.9.1"} "ppxlib" {< "0.9.0"} "stdcompat" "ppx_deriving"
  "ocaml" {>= "4.04.1" & < "4.08.0"}] # no ppxlib for OCaml <4.04.1
