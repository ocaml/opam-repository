  "bls12-381-unix"
  "tezos-stdlib-unix" { = version }
  "tezos-mockup-commands" { = version }
  "tezos-proxy" { = version }
  "lwt-exit"
  "tezos-test-services" { with-test & = version }
]
build: [
  ["rm" "-r" "vendors"]
  ["dune" "build" "-p" name "-j" jobs]
  ["mv" "src/lib_client_base_unix/%{name}%.install" "./"]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
