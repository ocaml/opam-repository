  "ocaml" {>= "4.03.0" & < "4.08.0"}
  "ocamlfind" {build}
  "ocamlbuild" {build}
  "ctypes" {>= "0.7.0"}
  "ctypes-foreign" {>= "0.4.0"}
  "conf-mariadb"
]
