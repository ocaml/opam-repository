  "ocaml" {>= "4.01.0"}
  "mirage-xen-minios" {>= "0.7.0"}
  "conf-pkg-config"
  "ocamlbuild" {build}
]
available: os = "linux"
synopsis: "MirageOS library for posix headers"
description: """
This package contains the header files to pretend a posix
system (required to compile the OCaml runtime), plus minilibc and
float formating."""
