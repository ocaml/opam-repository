  "current" {= version}
  "ocaml" {>= "4.08.0"}
  "conf-git"
  "fmt" {>= "0.8.9"}
  "ppx_deriving"
  "lwt"
  "irmin-watcher"
  "ppx_deriving_yojson" {>= "3.5.1"}
