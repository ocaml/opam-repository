  "fpath" {>= "0.7.3"}
  "logs" {>= "0.7.0"}
  "result" {>= "1.5"}
  "cstruct" {>= "6.0.0"}
  "mirage-crypto" {>= "0.8.0"}
  "mdx" {with-test}
]
