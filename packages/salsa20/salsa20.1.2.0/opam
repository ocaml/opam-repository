doc: "https://abeaumont.github.io/ocaml-salsa20/"
depends: [
  "ocaml" {>= "4.07.0"}
  "dune" {>= "1.8.0"}
  "cstruct" {>= "6.0.0"}
  "mirage-crypto"
  "salsa20-core" {>= "0.1.0"}
  "alcotest" {with-test}
]
build: [
  [ "dune" "subst" ] {dev}
  [ "dune" "build" "-j" jobs "-p" name "@install" ]
  [ "dune" "runtest" "-j" jobs "-p" name ] {with-test}
]
