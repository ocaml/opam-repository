build: [
  ["./configure" "--prefix=%{prefix}%" "--enable-text-tags"]
  [make]
]

install: [[make "install"]]

remove: [["ocamlfind" "remove" "text-tags"]]

depends: [
  "ocaml" {>= "4.03" & < "4.06"}
  "core_kernel" {>= "v0.9.0" & < "v0.10"}
  "oasis" {build & = "0.4.7"}
]
synopsis: "A library for rich formatting using semantics tags"
flags: light-uninstall
