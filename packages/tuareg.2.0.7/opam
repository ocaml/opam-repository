opam-version: "1"
maintainer: ["Christophe.Troestler@umons.ac.be"]
build: [
  [make "install" "INSTALL_DIR=%{prefix}%/share/tuareg"]
]
remove: [
  [make "uninstall"]
]
post-messages: ["Please add in ~/.emacs.d/init.el or ~/.emacs to following lines:\n    (add-to-list 'load-path \"INSTALL_DIR\")\n    (load \"tuareg-site-file\")\nwhere you must replace INSTALL_DIR by the value displayed during the\nabove installation" {success}]
