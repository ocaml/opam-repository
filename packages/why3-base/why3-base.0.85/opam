build: [
  [
    "./configure"
    "--prefix"
    prefix
    "--disable-bench"
    "--disable-frama-c"
    "--disable-ide" {!conf-gtksourceview:installed}
  ]
  [make "opt" "byte"]
  [make "doc" "stdlibdoc" "apidoc"] {with-doc}
]
depends: ["ocaml" "ocamlfind" "num"]
