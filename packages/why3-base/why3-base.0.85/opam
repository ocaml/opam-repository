# Jessie3 (frama-c plugin) is *disabled* because it is not ready
build: [
  [
    "./configure"
    "--prefix"
    prefix
    "--disable-bench"
    "--disable-frama-c"
    "--disable-ide" {!conf-gtksourceview:installed}
  ]
  [make "opt" "byte"]
]
build-doc: [
  [make "doc" "stdlibdoc" "apidoc"]
  [make "DOCDIR=%{doc}%/why3" "install-doc"]
]

depends: [
  "ocamlfind"
  "num"
]

depopts: [
  "lablgtk"
  "conf-gtksourceview"
  "zarith"
  "camlzip"
  "ocamlgraph"
  "coq"
]

conflicts: [
  "lablgtk" {< "2.14.2"}
  "ocamlgraph" {< "1.8.2"}
  "coq" {< "8.4"}
  "coq" {>= "8.5"}
]
install: [make "install" "install-lib"]
