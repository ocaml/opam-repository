  "lablgtk"
  "conf-gtksourceview"
  "zarith"
  "camlzip"
  "ocamlgraph"
  "coq"
]

conflicts: [
  "lablgtk" {< "2.14.2"}
  "ocamlgraph" {< "1.8.2"}
  "coq" {< "8.4"}
  "coq" {>= "8.5"}
]
