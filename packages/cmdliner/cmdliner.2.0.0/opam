  [
    make
    "install"
    "BINDIR=%{_:bin}%"
    "LIBDIR=%{_:lib}%"
    "DOCDIR=%{_:doc}%"
    "SHAREDIR=%{share}%"
    "MANDIR=%{man}%"
  ]
  [
    make
    "install-doc"
    "LIBDIR=%{_:lib}%"
    "DOCDIR=%{_:doc}%"
    "SHAREDIR=%{share}%"
    "MANDIR=%{man}%"
  ]
]
