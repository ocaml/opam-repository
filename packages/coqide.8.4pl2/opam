maintainer: "contact@ocamlpro.com"
build: [
  ["./configure"
     "-configdir" "%{lib}%/coq/config"
     "-mandir" "%{man}%"
     "-docdir" "%{doc}%"
     "--prefix" "%{prefix}%"
     "--usecamlp5"
     "--camlp5dir" "%{lib}%/camlp5"
]
  [make "coqide-files" "coqide-binaries"]
  [make "install-coqide"]
]
patches: ["CAML_LD_LIBRARY_PATH.patch"
          "MAKEFILE_remove_useless_for_coqide.patch"]

depends: ["camlp5" "coq" "lablgtk"]
