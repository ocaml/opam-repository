build:   [ make "build" ]
install: [ make "bindir=%{bin}%" "install" ]
remove:  [ "rm" "-f" "%{bin}%/ocveralls" ]

depends: [
  "ocaml" {>= "4.02.0"}
  "ocamlfind" {build}
  "ezjsonm" {build & >= "0.4.0"}
  "bisect" {build}
]
synopsis:
  "Generate JSON for http://coveralls.io from bisect code coverage data."
description: "Also support automatic upload of generated data."
