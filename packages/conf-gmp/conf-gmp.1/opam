license: "GPL"
build: [
  ["sh" "-c" "cc -c $CFLAGS test.c"] {os != "openbsd" & os != "freebsd" & os != "darwin"}
  ["sh" "-c" "cc -c $CFLAGS -I/usr/local/include -L/usr/local/lib test.c"] {os = "openbsd" | os = "freebsd" | os = "darwin"}
]
depexts: [
  [["debian"] ["libgmp-dev"]]
  [["ubuntu"] ["libgmp-dev"]]
  [["osx" "homebrew"] ["gmp"]]
  [["centos"] ["gmp" "gmp-devel"]]
  [["openbsd"] ["gmp"]]
  [["freebsd"] ["gmp"]]
]
