  "ocaml" { >= "4.05.0" & < "5.1" }
  "dune" { >= "1.0" }
  "menhir" {< "20201122"}
  "ANSITerminal"
  "fmt"
  "logs"
  "mtime" {>= "1.0.0" & < "2.0.0"}
