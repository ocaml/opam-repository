build: [
  ["ocaml" "configure.ml" "--share" "%{share}%/camomile"]
  ["jbuilder" "subst" "-n" name] {pinned}
  ["jbuilder" "build" "-p" name "-j" jobs]
]
build-test: [["jbuilder" "runtest" "-p" name "-j" jobs]]
depends: [
  "jbuilder" {build & >= "1.0+beta17"}
]
available: [ocaml-version >= "4.02.3"]
