build: [
  ["ocaml" "configure.ml" "--share" share]
  ["jbuilder" "build" "-p" name "-j" jobs]
]
install: [
  ["jbuilder" "install" "-p" name]
]
remove: [
  ["ocaml" "configure.ml" "--share" share]
  ["jbuilder" "build" "-p" name "-j" jobs]
  ["jbuilder" "uninstall" "-p" name]
]
