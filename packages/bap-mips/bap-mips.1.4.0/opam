build: [
  ["./configure" "--prefix=%{prefix}%" "--enable-mips"]
  [make]
]

install: [[make "install"]]

remove: [["ocamlfind" "remove" "bap-plugin-mips"]
         ["bapbundle" "remove" "mips.plugin"]]

