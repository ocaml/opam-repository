depends: [
  "dune" { >= "2.0" }
  "tezos-lmdb" { = "7.4" }
  "irmin" { >= "2.2.0" & < "2.3.0" }
  "irmin-pack" { >= "2.1.0" }
  "digestif" {>= "0.7.3"}
  "tezos-shell-services" { = version }
  "alcotest-lwt" { with-test & >= "1.1.0" }
]
build: [
  ["rm" "-r" "vendors"]
  ["dune" "build" "-p" name "-j" jobs]
  ["mv" "src/lib_storage/%{name}%.install" "./"]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
