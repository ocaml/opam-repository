opam-version: "2.0"
maintainer: "bash-maintainers@gnu.org"
homepage: "http://www.gnu.org/software/bash"
authors: "https://tiswww.case.edu/php/chet/bash/bashtop.html#TOCMaintainer"
bug-reports: "https://github.com/ocaml/opam-repository/issues"
license: "GPL-3.0-only"
build: [
  ["which" "bash"]
]
depends: ["conf-which" {build}]
depexts: [
  ["bash"] {os-family = "debian"}
  ["bash"] {os-distribution = "centos"}
  ["bash"] {os-distribution = "fedora"}
  ["bash"] {os-distribution = "arch"}
  ["sys-devel/bash"] {os-distribution = "gentoo"}
  ["bash"] {os-distribution = "nixos"}
  ["bash"] {os = "macos" & os-distribution = "homebrew"}
  ["devel/bash"] {os = "openbsd"}
  ["bash"] {os = "freebsd"}
  ["bash"] {os = "netbsd"}
  ["bash"] {os-distribution = "alpine"}
  ["bash"] {os-distribution = "ol"}
  ["bash"] {os-distribution = "rhel"}
  ["system:bash"] {os = "win32" & os-distribution = "cygwinports"}
  ["bash"] {os-family = "suse"}
]
synopsis: "Virtual package relying on bash installation"
description: """
This package can only install if the bash command
is available on the system."""
flags: conf
