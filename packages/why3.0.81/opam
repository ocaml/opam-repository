maintainer: "Francois.Bobot@cea.fr"

homepage: "http://why3.lri.fr/"
doc: "http://why3.lri.fr/#documentation"

authors: ["François Bobot"
          "Jean-Christophe Filliâtre"
          "Claude Marché"
          "Guillaume Melquiond"
          "Andrei Paskevich"]

