  "ocaml" {>= "5.0"}
  "algaeff" {>= "0.2"}
  "bwd" {>= "2.2"}
  "alcotest" {>= "1.5" & with-test}
  "qcheck-core" {>= "0.18" & with-test}
  "odoc" {>= "2.0" & with-doc}
]
