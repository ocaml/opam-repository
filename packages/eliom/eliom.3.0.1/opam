  [
    "sh"
    "configure"
    "--prefix"
    prefix
    "--mandir"
    man
    "--docdir"
    "%{lib}%/eliom/doc"
    "--datadir"
    "%{lib}%/eliom/share"
  ]
  [make]
]
remove: [["rm" "-rf" "%{lib}%/eliom" "%{man}%/man1/eliomc.1" "%{man}%/man1/eliomopt.1" "%{man}%/man1/eliomcp.1" "%{man}%/man1/js_of_eliom.1" "%{man}%/man1/eliomdep.1" "%{man}%/man1/eliom-destillery.1"]]
