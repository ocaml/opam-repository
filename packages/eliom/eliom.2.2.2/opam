build: [
  [
    "sh"
    "configure"
    "--prefix"
    prefix
    "--mandir"
    man
    "--docdir"
    "%{lib}%/eliom/share/doc/eliom"
    "--without-ocamlduce"
  ]
  [make]
]
remove: [["rm" "-rf" "%{lib}%/eliom"]]
