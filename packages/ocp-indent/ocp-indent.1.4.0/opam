opam-version: "1"
maintainer: "contact@ocamlpro.com"
homepage: "http://www.typerex.org/ocp-indent.html"
license: "LGPL"
build: [
  ["./configure" "--prefix" prefix]
  [make]
  [make "install"]
]
remove: [
  ["./configure" "--prefix" prefix]
  [make "uninstall"]
]
depends: [
  "ocp-build" {>= "1.99.6-beta"}
  "cmdliner"
]
post-messages: "OCP-INDENT installed.\n\nTo use it from emacs, add the following to your .emacs:\n  (add-to-list 'load-path (concat\n     (replace-regexp-in-string \"\\n$\" \"\"\n        (shell-command-to-string \"opam config var share\"))\n     \"/emacs/site-lisp\"))\n  (require 'ocp-indent)\n\nTo use it from Vim, add to your .vimrc:\n  autocmd FileType ocaml source\n    (system(\"opam config var share\").\"/emacs/site-lisp/ocp-indent.vim\")" {success}
