  ["omake" "-j2" "doc"]
  ["omake" "install_doc" "DOC_DIR=%{doc}%/cfstream"]
]

depends: [
  "ocamlfind"
  "omake"
  "core"
]

ocaml-version: [>="4.00.1"]
