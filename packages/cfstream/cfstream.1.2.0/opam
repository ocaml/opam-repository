build: [
  ["omake" "PREFIX=%{prefix}%" "COMPILE_TEST=false"]
  ["omake" "doc"] {with-doc}
]
install: [
  ["omake" "install"]
  ["omake" "install_doc" "DOC_DIR=%{doc}%/cfstream"] {with-doc}
]
remove: ["ocamlfind" "remove" "cfstream"]

depends: [
  "ocaml" {>= "4.01.0" & < "4.06.0"}
  "ocamlfind" {build}
  "omake" {build}
  "core_kernel" {< "v0.11"}
]
synopsis: "Stream operations in the style of Core's API."
