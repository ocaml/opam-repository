  "ocaml"               {           >= "4.07.0"            }
  "coq"                 {           >= "8.11.0" & < "8.12" }
  "cmdliner"            {           >= "1.0.0"             }
  "ocamlfind"           {           >= "1.8.0"             }
  "sexplib"             {           >= "v0.11.0"           }
  "dune"                {           >= "1.2.0"             }
  "ppx_import"          {           >= "1.5-3"             }
  "ppx_deriving"        {           >= "4.2.1"             }
  "ppx_sexp_conv"       {           >= "v0.11.0"           }
  "yojson"              {           >= "1.7.0"             }
  "ppx_deriving_yojson" {           >= "3.4"               }
]

