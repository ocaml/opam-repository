  "lwt" {>= "2.3.2"}
  "extlib" {>= "1.8.0" & with-test}
  "ounit2" {>= "2.2.7" & with-test}
  "odoc" {with-doc}
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
]
