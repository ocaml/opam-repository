  src: "https://download.pytorch.org/libtorch/cpu/libtorch-cxx11-abi-shared-with-deps-1.8.0%2Bcpu.zip"
  checksum: "md5=82969e58ae8cabee16746711850d6fd9"
}
available: arch = "x86_64" & os = "linux"
