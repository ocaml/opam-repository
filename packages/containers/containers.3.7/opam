  "qtest" { with-test }
  "qcheck" { with-test & >= "0.9" }
  "ounit" { with-test }
  "iter" { with-test }
  "gen" { with-test }
  "csexp" { with-test }
  "uutf" { with-test }
  "odoc" { with-doc }
]
