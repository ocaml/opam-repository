  "ocamlfind" { build }
  "omake" { build & < "0.10.1" } 
  "spotlib" { >= "3.1.0" } 
  "pcre"
  "ppx_tools" 
  "ppxx" { >= "1.3.0" } 
  "re" { >= "1.5.0" }
]
