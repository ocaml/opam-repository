build: [
  [ "ocaml" "setup.ml" "-configure" "--prefix" prefix ]
  [ "ocaml" "setup.ml" "-build" ]
]
install: [
  [ "ocaml" "setup.ml" "-install" ]
]
remove: [
  [ "ocaml" "setup.ml" "-configure" "--prefix" prefix ]
  [ "ocaml" "setup.ml" "-uninstall" ]
]
depends: [
  "ocamlfind" { build }
  "omake" { build }
  "spotlib" { >= "3.1.0" & < "4.0.0" }
  "pcre"
  "ppx_tools"
  "ppxx" { >= "1.3.0" & < "1.4.0" }
  "re" { >= "1.6.0" }
]
available: [
  ocaml-version >= "4.04.0" & ocaml-version < "4.05.0"
]
