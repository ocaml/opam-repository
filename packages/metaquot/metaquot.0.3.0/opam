depends: [
  "ocaml" {>= "4.08.0" & < "4.12.0"}
  "stdcompat" {>= "12"}
  "ppxlib" {>= "0.16.0" & < "0.18.0"}
  "ocamlfind" {>= "1.8.1"}
  "dune" {>= "1.11.0"}
  "metapp" {>= "0.3.0"}
  "odoc" {with-doc & >= "1.5.1"}
]
