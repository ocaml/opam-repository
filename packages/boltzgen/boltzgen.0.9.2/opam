  "dune" {>= "2.7"}
  "ocaml" {>= "4.08.0"}
  "ocaml-compiler-libs"
  "cmdliner"
  "base-unix"
  "odoc" {with-doc}
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
]
