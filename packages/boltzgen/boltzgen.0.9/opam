  "dune" {>= "2.6"}
  "ocaml" {>= "4.08.1"}
  "ocaml-compiler-libs"
  "cmdliner"
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
]
