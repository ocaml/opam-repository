bug-reports: "https://git.lacl.fr/barbot/boltzgen/-/issues"
depends: [
  "ocaml" {>= "5.0.0"}
  "dune" {>= "3.15" & >= "3.15"}
  "ocaml-compiler-libs"
  "cmdliner" {>= "1.1.0"}
  "base-unix"
  "odoc" {with-doc}
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
]
