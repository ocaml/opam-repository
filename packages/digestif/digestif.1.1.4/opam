  "fmt"             {with-test}
  "alcotest"        {with-test}
  "bos"             {with-test}
  "astring"         {with-test}
  "fpath"           {with-test}
  "rresult"         {with-test}
  "ocamlfind"       {with-test}
]

conflicts: [
