opam-version: "2.0"
maintainer: "orbitz@gmail.com"
build: [
	[make "-j1"]
]

install: [
	[make "PREFIX=%{prefix}%" "install"]
]

remove: [
	[make "PREFIX=%{prefix}%" "remove"]
]

depends: [
  "ocaml" {>= "4.02"}
  "crunch"
  "ocamlfind"
  "toml" {>= "4.0.0"}
]
authors: [
	"dklee@dklee.org"
	"orbitz@gmail.com"
]

