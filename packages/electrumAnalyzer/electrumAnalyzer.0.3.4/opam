  "batteries" {build}
  ("cmdliner" {build & = "0.9.7"} | "cmdliner" {build & = "0.9.6"} |
   "cmdliner" {build & = "0.9.5"})
  "menhir" {build & >= "20150720"}
  "ocamlfind" {build & >= "1.5.5"}
  "pprint" {build}
]
available: [os = "darwin" | os = "linux" & ocaml-version >= "4.02"]
