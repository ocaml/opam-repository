  "dune" {>= "2.7"}
  "ocaml" {>= "4.12"}
  "dune-compiledb"
  "dune-configurator"
  "conf-sqlite3" {build}
  "ppx_inline_test" {with-test}
  "odoc" {with-doc}
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
