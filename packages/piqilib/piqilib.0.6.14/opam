maintainer: "Anton Lavrik <alavrik@piqi.org>"
homepage: "http://piqi.org"
bug-reports: "https://github.com/alavrik/piqi/issues"
build: [
  ["./configure" "--prefix" prefix]
  [make]
  [make "ocaml"]
  [make "test"] {with-test}
]
install: [
  [make "install"]
  [make "ocaml-install"]
]
remove: [
  ["rm" "-f" "%{prefix}%/bin/piqi"]
  ["ocamlfind" "remove" "piqilib"]
]
flags: light-uninstall
conflicts: [
    "piqi" {<= "0.7.6"}
]
depends: [
  "ocaml" {>= "4.02.0"}
  "ocamlfind" {build}
  "easy-format"
  "ulex"
  "xmlm"
  "base64" {>="2.0.0"}
]
