opam-version: "1.2"
maintainer: "alavrik@piqi.org"
build: [
  ["./configure" "--prefix" prefix]
  [make]
  [make "ocaml"]
  [make "install"]
  [make "ocaml-install"]
]
remove: [
  ["rm" "-f" "%{prefix}%/bin/piqi"]
  ["ocamlfind" "remove" "piqilib"]
]
depends: [
  "ocamlfind"
  "easy-format"
  "ulex"
  "xmlm"
  "camlp4" {< "4.02"}
  "ocamlbuild" {build}
]
dev-repo: "git://github.com/alavrik/piqi"
