maintainer: "alavrik@piqi.org"
dev-repo: "https://github.com/alavrik/piqi.git"
build: [
  ["./configure" "--prefix" prefix]
  [make]
  [make "ocaml"]
  [make "install"]
  [make "ocaml-install"]
]
