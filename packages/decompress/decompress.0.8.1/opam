  "ocaml"      {>= "4.03.0"}
  "dune"
  "base-bytes"
  "base-bigarray"
  "optint"
  "checkseum"
  "camlzip"    {with-test & >= "1.07"}
  "re"         {with-test & >= "1.7.2"}
  "alcotest"   {with-test}
  "cmdliner"
]
