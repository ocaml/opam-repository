license:      "MIT"

build: [
  [
    "./configure"
    "--%{base-unix:enable}%-unix"
    "--prefix=%{prefix}%"
    "--%{cmdliner:enable}%-cmdliner"
  ]
  [make]
  [
    "./configure"
    "--enable-tests"
    "--%{base-unix:enable}%-unix"
    "--%{cmdliner:enable}%-cmdliner"
    "--%{camlzip:enable}%-camlzip"
    "--enable-istub"
    "--prefix=%{prefix}%"
  ] {with-test}
  [make "test"] {with-test}
]
install: [make "install"]
remove: ["ocamlfind" "remove" "decompress"]

depends: [
  "ocaml" {>= "4.02.0"}
  "oasis" {build}
  "ocamlfind" {build}
  "base-bytes"
  "alcotest" {with-test}
  "re" {with-test}
  "camlzip" {with-test}
  "cmdliner" {with-test}
  "ctypes" {with-test}
  "ctypes-foreign" {with-test}
]
depopts: [
  "base-unix"
]

synopsis: "Pure OCaml implementation of Zlib"
description: "Pure OCaml implementation of Zlib"
flags: light-uninstall
