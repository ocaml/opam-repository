maintainer: "alavrik@piqi.org"
build: [
  ["./configure" "--prefix" "%{prefix}%"]
  [make]
  [make "ocaml"]
  [make "install"]
  [make "ocaml-install"]
]
remove: [
  ["rm" "-f" "%{prefix}%/bin/piqi" "%{prefix}%/bin/piqic"]
  ["ocamlfind" "remove" "piqi"]
]
depends: ["ocamlfind" "easy-format" "ulex" "xmlm"]
