depends: [
  "dune" {>= "2.9"}
  "ocurl"
  "http" {= version}
  "stringext"
  "cohttp-curl" {= version}
  "core"
  "core_unix" {>= "v0.14.0"}
  "async_kernel"
  "async_unix"
  "cohttp-async" {with-test}
  "uri" {with-test & >= "4.2.0"}
  "fmt" {with-test}
  "ounit" {with-test}
  "alcotest" {with-test}
  "odoc" {with-doc}
]
dev-repo: "git+https://github.com/mirage/ocaml-cohttp.git"
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "--promote-install-files=false"
    "@install"
    "@cohttp-curl-async/runtest" {with-test}
    "@doc" {with-doc}
  ]
  ["dune" "install" "-p" name "--create-install-files" name]
]
