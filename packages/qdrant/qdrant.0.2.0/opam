  "ocaml" {>= "5.1.0"}
  "dune" {>= "3.0" & >= "3.0"}
  "eio" {>= "0.12"}
  "eio_main" {>= "0.12"}
  "cohttp-eio" {>= "0.1.0"}
  "yojson" {>= "2.0"}
  "uri" {>= "4.0"}
  "alcotest" {with-test & >= "1.7"}
  "odoc" {with-doc}
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
]
