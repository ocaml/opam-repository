build: [
  [
    "./configure"
    "-configdir"
    "%{lib}%/coq/config"
    "-mandir"
    man
    "-prefix"
    prefix
    "-usecamlp4"
    "-coqide"
    "no"
    "-debug"
  ]
  [make "-j%{jobs}%"]
]
depends: [
  "camlp4"
  "num"
]
available: [ (ocaml-version >= "4.02.0") & ocaml-version < "4.06.0" ]
install: [make "install"]
