build: [
  ["dune" "subst"] {pinned}
  ["dune" "build" "-p" name "-j" jobs]
  ["dune" "runtest" "-p" name "-j" "1"] {with-test & ocaml:version >= "4.03"}
]
depends: [
  "ocaml" {>= "4.12.0" & < "4.13"}
  "dune" {>= "2.7.0"}
  "dot-merlin-reader" {>= "4.0"}
  "yojson" {>= "1.6.0"}
