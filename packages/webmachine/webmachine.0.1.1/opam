  ocaml-version >= "4.01"
]
build: [
  ["./configure" "--prefix=%{prefix}%"]
  [make]
]
install: [
  [make "install"]
]
remove: [
  ["ocamlfind" "remove" "webmachine"]
]
build-test: [
  ["./configure" "--enable-tests"]
  [make]
  [make "test"]
]
build-doc: [make "doc"]
depends: [
  "cohttp" {>= "0.9.11"}
  "ocamlfind" {build}
  "ounit" {test & >= "1.0.2"}
  "re" {>= "1.3.0"}
]
