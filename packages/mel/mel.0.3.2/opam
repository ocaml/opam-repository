  "cmdliner" {>= "1.1.0"}
  "luv" {>= "0.5.11"}
  "ocaml-migrate-parsetree" {>= "2.3.0"}
  "ounit" {with-test}
  "odoc" {with-doc}
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
]
