depends: [
  "dune" { >= "2.5" }
  "tezos-base" { = version }
  "irmin" { >= "2.7.2" & < "2.8" }
  "irmin-pack" { >= "2.7.2" & < "2.8" }
  "digestif" {>= "0.7.3"}
  "tezos-shell-services" { = version }
  "alcotest-lwt" { with-test & >= "1.1.0" }
]
build: [
  ["rm" "-r" "vendors"]
  ["dune" "build" "-p" name "-j" jobs]
  ["mv" "src/lib_context/%{name}%.install" "./"]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
