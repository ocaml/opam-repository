  "ocaml" {>= "4.14.0"}
  "dune" {>= "3.8"}
  "opam-client" {>= "2.5" & < "2.6"}
  "angstrom" {>= "0.15.0"}
  "fmt" {>= "0.9.0"}
  "lwt" {>= "5.0"}
  "bos"
  "yojson"
  "odoc" {with-doc}
]
available: opam-version >= "2.5" & opam-version < "2.6"
