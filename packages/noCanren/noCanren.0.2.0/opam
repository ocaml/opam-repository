  "ocaml"      {= "4.10.1" }
  "ocamlfind"  { build }
  "ocamlbuild" { build }
  "ppx_tools"  { build }
  "GT"         { build }
]
build: [
  [make]
  # [make "test"] {with-test} # tests require OCanren package which isn't opamized yet
]
install: [make "PREFIX=%{prefix}%" "install"]

