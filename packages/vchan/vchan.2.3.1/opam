build: [
  [
    "./configure"
    "--%{xen-evtchn-unix+xen-gnt-unix:enable}%-xenctrl"
    "--%{mirage-xen:enable}%-xen"
  ]
  [make "build"]
  [make "test"] {with-test}
]
install: [
  [make "install"]
  [make "js-install"]
]
remove: [
  [make "js-uninstall"]
  ["ocamlfind" "remove" "vchan"]
]

