  "ocaml" {>= "4.02.0"}
  "ocamlfind" {build}
  "lwt" {>= "2.5.0"}
  "cstruct" {>= "1.9.0"}
  "ppx_tools" {build}
  "ppx_deriving" {build}
  "ppx_sexp_conv" {build}
  "io-page"
