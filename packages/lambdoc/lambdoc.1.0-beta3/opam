    ["./configure" "--prefix" prefix "--docdir" "%{doc}%/lambdoc"]
    [make]
    [make "doc"]
]
install: [[make "install"]]
remove: [["ocamlfind" "remove" "lambdoc"]]
depends: [
  "ocamlfind"
  "camlp4"
  "batteries" {>= "2"}
  "menhir"
  "ulex"
  "sexplib" {< "113.01.00"}
  "type_conv"
  "pcre"
  "pxp"
  "xstrp4"
  "tyxml" {>= "3.2" & < "4"}
  "omd" {>= "1.0.0"}
  "blahcaml"
  "camlhighlight" {>= "3.0" & < "4"}
  "ocamlbuild" {build}
]
