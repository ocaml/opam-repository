build: [
  ["sh" "-exc" "cc $CFLAGS test.c -lopenblas"] {os != "darwin" & os != "freebsd" & os != "win32"}
  ["sh" "-exc" "cc $CFLAGS test.c -L/usr/local/opt/openblas/lib -lopenblas"] {os = "darwin"}
]
