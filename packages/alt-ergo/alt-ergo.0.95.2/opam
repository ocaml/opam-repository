build:
[
  ["./configure" "-prefix" prefix]
  [make]
]

install:
[
  [make "install" "MANDIR=%{man}%"]
]

remove:
[
  ["rm" "%{prefix}%/bin/alt-ergo"]
  ["rm" "%{man}%/man1/alt-ergo.1"]
]

