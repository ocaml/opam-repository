  "alcotest" {with-test}
  "base-domains"
  "cohttp" {= version}
  "eio" {>= "0.12"}
  "eio_main" {with-test}
  "mdx" {with-test}
  "uri" {with-test}
  "tls-eio" {with-test & >= "0.17.2"}
  "mirage-crypto-rng-eio" {with-test & >= "0.11.2"}
