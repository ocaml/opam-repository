build: [
  ["sh" "./configure" "--prefix=%{prefix}%" "--enable-taint"]
  [make]
]
install: [[make "install"]]
remove: [["ocamlfind" "remove" "bap-plugin-taint"]
         ["bapbundle" "remove" "taint.plugin"]]
depends: ["bap-std" "cmdliner"]
