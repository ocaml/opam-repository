build: [
  ["./configure" "--prefix=%{prefix}%" "--enable-taint"]
  [make]
]
install: [[make "install"]]
remove: [["ocamlfind" "remove" "bap-plugin-taint"]
         ["bapbundle" "remove" "taint.plugin"]]
depends: [
  "ocaml"
  "bap-std" {= "1.0.0"}
  "cmdliner"
]
