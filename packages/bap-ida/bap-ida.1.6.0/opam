  "ocaml" {>= "4.04.1" & < "4.08.0"}
  "conf-ida"
  "bap-ida-python" {= "1.6.0"}
  "core_kernel" {>= "v0.11" & < "v0.12"}
  "oasis" {build & >= "0.4.7"}
  "fileutils"
  "re"
  "bap-ida-plugin" {= "1.6.0"}
]
