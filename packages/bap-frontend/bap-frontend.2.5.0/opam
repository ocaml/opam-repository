license: "MIT"
build: [
  ["./configure"
                 "--prefix=%{prefix}%"
                 "--mandir=%{man}%"
                 "--enable-frontend"]
  [make]
]

install: [
  [make "install"]
]

remove: [
  ["rm" "-f" "%{bin}%/bap"]
]

depends: [
  "ocaml" {>= "4.08.0" }
  "core_kernel" {>= "v0.14" & < "v0.16"}
  "ppx_bap"
  "oasis" {build & >= "0.4.7"}
  "bap-std" {= "2.5.0"}
  "bap-main" {= "2.5.0"}
  "bap-core-theory" {= "2.5.0"}
  "bap-knowledge" {= "2.5.0"}
  "regular" {= "2.5.0"}
  "ocamlfind"
]
synopsis: "BAP frontend"
description: "The command-line interface to the Binary Analysis Platform."
flags: light-uninstall

