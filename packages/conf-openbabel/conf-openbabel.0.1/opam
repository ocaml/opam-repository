  ["libopenbabel-dev"] {os-distribution = "debian"}
  ["libopenbabel-dev"] {os-distribution = "ubuntu"}
  ["open-babel"] {os = "macos" & os-distribution = "homebrew"}
  ["openbabel-devel"] {os-distribution = "centos"}
]
