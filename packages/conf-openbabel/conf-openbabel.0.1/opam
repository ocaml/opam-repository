  ["c++" "-I/usr/include/openbabel-2.0" "test.cpp" "-lopenbabel"]
    {os != "macos"}
  [
    "c++"
    "-I/usr/local/include/openbabel-2.0"
    "test.cpp"
    "-L/usr/local/lib"
    "-lopenbabel"
  ] {os = "macos"}
]
