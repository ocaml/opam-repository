build: [
  [ "./configure" "--prefix" prefix
    "--enable-unix"
    "--%{lwt:enable}%-lwt" ]
  [ make ]
]
install: [ make "install" ]
remove:  [ "ocamlfind" "remove" "notty" ]

depends: [
  "ocamlfind" {build}
  "result"
  "uucp"
  "uuseg"
  "uutf"
]
depopts: [
  "lwt"
]
conflicts: [
  "lwt" {< "2.5.0"}
]

available: [ ocaml-version >= "4.02.0" ]
