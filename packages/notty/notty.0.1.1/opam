opam-version: "1.2"
homepage:     "https://github.com/pqwy/notty"
dev-repo:     "https://github.com/pqwy/notty.git"
bug-reports:  "https://github.com/pqwy/notty/issues"
author:       "David Kaloper <david@numm.org>"
