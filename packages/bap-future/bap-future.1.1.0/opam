  "ocaml"
  "core_kernel" {>= "113.24.00" & < "v0.9.0"}
  "oasis" {build & >= "0.4.7"}
]
synopsis: "Library for asynchronous values"
description: """
A library for reasoning about state based dynamic system. This can
be seen as a common denominator between Lwt and Async libraries."""
