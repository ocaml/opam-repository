    "%{bin}%/imaplet_configure"
    "%{bin}%/imaplet_create_account"
    "%{bin}%/imaplet_deploy"
    "%{bin}%/imaplet_irmin_build"
    "%{bin}%/imaplet_irmin_read"
    "%{bin}%/imaplet_maildir_index"
    "%{bin}%/smtplet"
  ]
]
