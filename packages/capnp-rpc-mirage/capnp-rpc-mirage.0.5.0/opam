  "io-page-unix" {with-test}
  "tcpip" {with-test}
  "mirage-vnetif" {with-test}
  "dune" {>= "1.0"}
]
build: [
  ["dune" "build" "-p" name "-j" jobs]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
