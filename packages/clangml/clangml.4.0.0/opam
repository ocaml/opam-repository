  "conf-libclang"
  "conf-ncurses"
  "conf-zlib"
  "ocamlfind" {build & >= "1.8.0"}
  "dune" {>= "1.10.0"}
  "ppxlib" {>= "0.6.0" & < "0.9.0"}
  "stdcompat" {>= "10"}
  "ppx_show" {>= "0.1.0"}
  "ppx_compare" {>= "v0.12.0" & < "v0.15"}
  "override" {>= "0.1.0"}
  "ocaml" {>= "4.04.0" & != "4.05.0" }
]
build: [
  ["./configure" "--prefix=%{prefix}%"]
  ["dune" "build" "-p" name "-j" jobs]]
