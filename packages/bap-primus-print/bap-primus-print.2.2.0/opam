license: "MIT"
build: [
  ["./configure" "--prefix=%{prefix}%" "--enable-primus-print"]
  [make]
]

install: [[make "install"]]

remove: [["ocamlfind" "remove" "bap-plugin-primus_print"]
         ["bapbundle" "remove" "primus_print.plugin"]]

depends: [
  "ocaml" {>= "4.08.0" }
  "core_kernel" {>= "v0.14" & < "v0.15"}
  "ppx_bap" {>= "v0.14" & < "v0.15"}
  "bap-std" {= "2.2.0"}
  "bap-primus" {= "2.2.0"}
  "bap-future" {= "2.2.0"}
  "monads" {= "2.2.0"}
  "bare" {= "2.2.0"}
]
