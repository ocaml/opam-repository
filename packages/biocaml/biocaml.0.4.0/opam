build: [
  ["omake" "PREFIX=%{prefix}%"]
  ["omake" "doc"] {with-doc}
]
install: [
  ["omake" "%{name}%.install"]
  ["omake" "install_doc" "DOCDIR=%{doc}%/biocaml"] {with-doc}
]
depends: [
  "ocaml" {>= "4.01.0"}
  "ocamlfind" {build}
  "omake" {build & < "0.10"}
