  "ocaml" {>= "4.14" & < "5"}
  "ocamlfind" {>= "1.4.0"}
  "lablgtk" {>= "2.18.0"}
  "ocp-indent" { >= "1.8.0" }
  "xml-light" {>= "2.2"}
  "yojson" {>= "2.1"}
  "atdgen" {>= "2.12"}
  "ocamldiff" {>= "1.1"}
  "merlin" {>= "4.9"}
]
depopts: [
  "ocurl"
]
