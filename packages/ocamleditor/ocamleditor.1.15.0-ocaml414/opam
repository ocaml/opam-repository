bug-reports: "https://github.com/ocamleditor/ocamleditor/issues"
dev-repo: "git+https://github.com/ocamleditor/ocamleditor.git"

build: [["ocaml" "build.ml" "ocamleditor"]]
install: [["ocaml" "tools/install.ml" "-prefix" prefix]]

