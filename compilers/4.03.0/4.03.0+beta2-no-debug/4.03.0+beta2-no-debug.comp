opam-version: "1"
version: "4.03.0"
src: "https://codeload.github.com/ocaml/ocaml/legacy.tar.gz/4.03.0+beta2"
build: [
  ["./configure"
    "-prefix" prefix "-with-debug-runtime"
  ] { os != "openbsd" & os  != "freebsd" & os  != "darwin" }
  ["./configure"
    "-prefix" prefix "-with-debug-runtime"
    "-cc" "cc"
    "-aspp" "cc -c"
  ] { os  = "openbsd" | os  = "freebsd" | os  = "darwin" }
  [make "world"]
  [make "world.opt"]
  [make "install"]
]
packages: [
  "base-unix"
  "base-bigarray"
  "base-threads"
]
env: [[CAML_LD_LIBRARY_PATH = "%{lib}%/stublibs"]]
