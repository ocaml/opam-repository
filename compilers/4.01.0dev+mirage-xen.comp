opam-version: "1"
version: "4.01.0dev"
src: "https://github.com/ocaml/ocaml/tarball/trunk"
build: [
  ["./configure" "-prefix" "%{prefix}%" "-with-debug-runtime"]
  ["%{make}%" "world"]
  ["%{make}%" "world.opt"]
  ["%{make}%" "install"]
  ["sh" "-c" "rm %{lib}%/ocaml/bigarray.*"]
]
packages: ["lwt" "ocamlfind" "xenbigarray"]
env: [
  [MIRAGE_OS = "xen"]
  [MIRAGE_NET = "direct"]
]
