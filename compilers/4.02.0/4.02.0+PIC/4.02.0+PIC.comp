opam-version: "1"
version: "4.02.0"
src: "http://caml.inria.fr/pub/distrib/ocaml-4.02/ocaml-4.02.0.tar.gz"
build: [
  ["./configure" "-prefix" prefix "-with-debug-runtime" "-cc" "gcc -fPIC" "-aspp" "gcc -c -fPIC"]
