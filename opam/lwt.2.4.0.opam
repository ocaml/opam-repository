opam-version: "1"

package "lwt" {
  version:    "2.4.0"
  maintainer: "contact@ocamlpro.com"
  build: [
    [ "./configure"
        "--%{conf-libev:enable}%-libev"
        "--%{react:enable}%-react"
        "--%{ssl:enable}%-ssl"
        "--%{base-unix:enable}%-unix"
        "--%{base-unix:enable}%-extra"
        "--%{base-threads:enable}%-preemptive"
    ]
    [ "make" "build" ]
    [ "make" "install" ]
  ]
  remove: [ "ocamlfind" "remove" "lwt" ]
  depends: [
    "ocamlfind"
  ]
  depopts: [
    "react"
    "ssl"
    "conf-libev"
    "base-unix"
    "base-threads"
  ]
}
